@model QuanLyThuVienTruongHoc.Models.Library.Category

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Chi tiết thể loại sách";
}

<!-- Page Header -->
<div class="page-header">
    <h1><i class="fas fa-info-circle me-2"></i>Chi tiết thể loại sách</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
    </a>
</div>

<!-- Details Card -->
<div class="details-card">
    <div class="card-header">
        <h4><i class="fas fa-tag me-2"></i>Thông tin thể loại</h4>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">
            <strong><i class="fas fa-tag me-2 text-muted"></i>Mã thể loại:</strong>
            <span class="badge bg-primary fs-6">@Model.CategoryId</span>
        </li>
        <li class="list-group-item">
            <strong><i class="fas fa-heading me-2 text-muted"></i>Tên thể loại:</strong>
            <span>@Model.Name</span>
        </li>
        <li class="list-group-item">
            <strong><i class="fas fa-align-left me-2 text-muted"></i>Mô tả:</strong>
            <span>
                @if (string.IsNullOrEmpty(Model.Description))
                {
                    <span class="text-muted fst-italic">Chưa có mô tả</span>
                }
                else
                {
                    @Model.Description
                }
            </span>
        </li>
    </ul>
</div>

<!-- Action Buttons -->
<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-primary">
        <i class="fas fa-edit me-2"></i>Chỉnh sửa
    </a>
    <a asp-action="Delete" asp-route-id="@Model.CategoryId" class="btn btn-danger">
        <i class="fas fa-trash me-2"></i>Xóa
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-list me-2"></i>Danh sách
    </a>
</div>
