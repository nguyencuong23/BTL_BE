@model IEnumerable<QuanLyThuVienTruongHoc.Models.Library.Category>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Quản lý thể loại sách";
}

<!-- Page Header -->
<div class="page-header">
    <h1><i class="fas fa-tags me-2"></i>Quản lý thể loại sách</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Thêm thể loại mới
    </a>
</div>

<!-- Search Bar -->
<div class="search-bar">
    <div class="d-flex flex-wrap align-items-center gap-3">
        <!-- Search Input -->
        <div class="search-input-wrapper flex-grow-1">
            <i class="fas fa-search"></i>
            <input type="text" id="searchInput" class="form-control search-input" 
                   placeholder="Tìm kiếm theo mã, tên hoặc mô tả...">
        </div>

        <!-- Right Side: Filters & Total -->
        <div class="d-flex align-items-center gap-3 ms-auto">
            <form id="filterForm" method="get" class="d-flex align-items-center gap-2">
                <select name="sortOrder" class="form-select filter-select" style="min-width: 160px;" 
                        onchange="document.getElementById('filterForm').submit();">
                    @{
                        var sort = ViewData["CurrentSort"] as string;
                    }
                    <option value="" selected="@(string.IsNullOrEmpty(sort))">Tên (A-Z)</option>
                    <option value="name_desc" selected="@(sort == "name_desc")">Tên (Z-A)</option>
                </select>
            </form>

            <div class="vr h-100 mx-1"></div>

            <span class="text-nowrap text-muted">Tổng: <strong>@Model.Count()</strong> thể loại</span>
        </div>
    </div>
</div>

<!-- Data Table -->
<div class="table-card">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead>
                <tr>
                    <th style="width: 120px;">Mã thể loại</th>
                    <th>Tên thể loại</th>
                    <th>Mô tả</th>
                    <th style="width: 180px;" class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <span class="badge bg-primary">@item.CategoryId</span>
                            </td>
                            <td>
                                <strong>@item.Name</strong>
                            </td>
                            <td>
                                @(string.IsNullOrEmpty(item.Description) ? 
                                  "<span class='text-muted fst-italic'>Chưa có mô tả</span>" : 
                                  item.Description)
                            </td>
                            <td class="text-center">

                                <div class="dropdown d-inline-block">
                                    <button class="btn btn-light btn-sm" type="button" data-bs-toggle="dropdown" aria-expanded="false" data-bs-boundary="viewport">
                                        <i class="fas fa-ellipsis-v text-muted"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                        <li>
                                            <a asp-action="Details" asp-route-id="@item.CategoryId" class="dropdown-item">
                                                <i class="fas fa-eye me-2 text-info" style="width: 20px;"></i>Chi tiết
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-action="Edit" asp-route-id="@item.CategoryId" class="dropdown-item">
                                                <i class="fas fa-edit me-2 text-primary" style="width: 20px;"></i>Chỉnh sửa
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a asp-action="Delete" asp-route-id="@item.CategoryId" class="dropdown-item text-danger">
                                                <i class="fas fa-trash me-2" style="width: 20px;"></i>Xóa
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4">
                            <div class="empty-state">
                                <i class="fas fa-inbox"></i>
                                <p>Chưa có thể loại sách nào</p>
                                <a asp-action="Create" class="btn btn-primary">
                                    <i class="fas fa-plus me-2"></i>Thêm thể loại đầu tiên
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
