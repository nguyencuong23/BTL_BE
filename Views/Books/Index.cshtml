@model IEnumerable<QuanLyThuVienTruongHoc.Models.Library.Book>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Quản lý sách";
}

<!-- Page Header -->
<div class="page-header">
    <h1><i class="fas fa-book me-2"></i>Quản lý sách</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Thêm sách mới
    </a>
</div>

<!-- Search Bar -->
<div class="search-bar">
    <div class="d-flex flex-wrap align-items-center gap-3">
        <!-- Search Input -->
        <div class="search-input-wrapper flex-grow-1">
            <i class="fas fa-search"></i>
            <input type="text" id="searchInput" class="form-control search-input" 
                   placeholder="Tìm kiếm theo mã sách, tên sách hoặc tác giả...">
        </div>

        <!-- Right Side: Filters & Total -->
        <div class="d-flex align-items-center gap-3 ms-auto">
            <form id="filterForm" method="get" class="d-flex align-items-center gap-2">
                <select name="sortOrder" class="form-select filter-select" style="min-width: 180px;" 
                        onchange="document.getElementById('filterForm').submit();">
                    @{
                        var sort = ViewData["CurrentSort"] as string;
                    }
                    <option value="" selected="@(string.IsNullOrEmpty(sort))">Tên sách (A-Z)</option>
                    <option value="title_desc" selected="@(sort == "title_desc")">Tên sách (Z-A)</option>
                    <option value="Author" selected="@(sort == "Author")">Tác giả (A-Z)</option>
                    <option value="author_desc" selected="@(sort == "author_desc")">Tác giả (Z-A)</option>
                    <option value="date_desc" selected="@(sort == "date_desc")">Mới nhất</option>
                    <option value="Date" selected="@(sort == "Date")">Cũ nhất</option>
                </select>
            </form>

            <div class="vr h-100 mx-1"></div>

            <span class="text-nowrap text-muted">
                Tổng: <strong>@ViewData["TotalTitles"]</strong> đầu sách, 
                <strong>@ViewData["TotalCopies"]</strong> cuốn
            </span>
        </div>
    </div>
</div>

<!-- Data Table -->
<div class="table-card">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead>
                <tr>
                <tr>
                    <th style="width: 80px;">Ảnh</th>
                    <th style="width: 110px;">Mã sách</th>
                    <th>Tên sách</th>
                    <th style="width: 180px;">Tác giả</th>
                    <th style="width: 150px;">Thể loại</th>
                    <th style="width: 100px;" class="text-center">Số lượng</th>
                    <th style="width: 180px;" class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ImagePath))
                                {
                                    <img src="@item.ImagePath" alt="@item.Title" class="book-thumbnail" />
                                }
                                else
                                {
                                    <div class="book-thumbnail bg-secondary d-flex align-items-center justify-content-center text-white">
                                        <i class="fas fa-book"></i>
                                    </div>
                                }
                            </td>
                            <td>
                                <span class="badge bg-info">@item.BookId</span>
                            </td>
                            <td>
                                <strong>@item.Title</strong><br />
                                <small class="text-muted">@item.PublishYear</small>
                            </td>
                            <td>@item.Author</td>
                            <td>
                                @if (item.Category != null)
                                {
                                    <span class="badge bg-primary">@item.Category.CategoryId</span>
                                    <small>@item.Category.Name</small>
                                }
                            </td>
                            <td class="text-center">
                                @if (item.Quantity > 10)
                                {
                                    <span class="badge badge-stock-ok">@item.Quantity</span>
                                }
                                else if (item.Quantity > 0)
                                {
                                    <span class="badge badge-stock-low">@item.Quantity</span>
                                }
                                else
                                {
                                    <span class="badge badge-stock-out">Hết</span>
                                }
                            </td>
                            <td class="text-center">

                                <div class="dropdown d-inline-block">
                                    <button class="btn btn-light btn-sm" type="button" data-bs-toggle="dropdown" aria-expanded="false" data-bs-boundary="viewport">
                                        <i class="fas fa-ellipsis-v text-muted"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                        <li>
                                            <a asp-action="Details" asp-route-id="@item.BookId" class="dropdown-item">
                                                <i class="fas fa-eye me-2 text-info" style="width: 20px;"></i>Chi tiết
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-action="Edit" asp-route-id="@item.BookId" class="dropdown-item">
                                                <i class="fas fa-edit me-2 text-primary" style="width: 20px;"></i>Chỉnh sửa
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a asp-action="Delete" asp-route-id="@item.BookId" class="dropdown-item text-danger">
                                                <i class="fas fa-trash me-2" style="width: 20px;"></i>Xóa
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7">
                            <div class="empty-state">
                                <i class="fas fa-book-open"></i>
                                <p>Chưa có sách nào trong thư viện</p>
                                <a asp-action="Create" class="btn btn-primary">
                                    <i class="fas fa-plus me-2"></i>Thêm sách đầu tiên
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
