@model QuanLyThuVienTruongHoc.Models.Library.Book

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Chi tiết sách";
}

<!-- Page Header -->
<div class="page-header">
    <h1><i class="fas fa-info-circle me-2"></i>Chi tiết sách</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <!-- Details Card -->
        <div class="details-card">
            <div class="card-header">
                <h4><i class="fas fa-book me-2"></i>Thông tin sách</h4>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <strong><i class="fas fa-barcode me-2 text-muted"></i>Mã sách:</strong>
                    <span class="badge bg-info fs-6">@Model.BookId</span>
                </li>
                <li class="list-group-item">
                    <strong><i class="fas fa-heading me-2 text-muted"></i>Tên sách:</strong>
                    <span>@Model.Title</span>
                </li>
                <li class="list-group-item">
                    <strong><i class="fas fa-user-edit me-2 text-muted"></i>Tác giả:</strong>
                    <span>@Model.Author</span>
                </li>
                <li class="list-group-item">
                    <strong><i class="fas fa-building me-2 text-muted"></i>Nhà xuất bản:</strong>
                    <span>@(Model.Publisher ?? "Chưa rõ")</span>
                </li>
                <li class="list-group-item">
                    <strong><i class="fas fa-tag me-2 text-muted"></i>Thể loại:</strong>
                    @if (Model.Category != null)
                    {
                        <span class="badge bg-primary">@Model.Category.CategoryId</span>
                        <span>@Model.Category.Name</span>
                    }
                </li>
                <li class="list-group-item">
                    <strong><i class="fas fa-calendar me-2 text-muted"></i>Năm xuất bản:</strong>
                    <span>@Model.PublishYear</span>
                </li>
                <li class="list-group-item">
                    <strong><i class="fas fa-sort-numeric-up me-2 text-muted"></i>Số lượng:</strong>
                    @if (Model.Quantity > 10)
                    {
                        <span class="badge badge-stock-ok">@Model.Quantity cuốn</span>
                    }
                    else if (Model.Quantity > 0)
                    {
                        <span class="badge badge-stock-low">@Model.Quantity cuốn</span>
                    }
                    else
                    {
                        <span class="badge badge-stock-out">Hết sách</span>
                    }
                </li>
                <li class="list-group-item">
                    <strong><i class="fas fa-map-marker-alt me-2 text-muted"></i>Vị trí kệ:</strong>
                    <span>@(Model.Location ?? "Chưa xác định")</span>
                </li>
            </ul>
        </div>
    </div>

    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-image me-2"></i>Ảnh bìa sách</h5>
                </div>
                <div class="card-body text-center">
                    <img src="@Model.ImagePath" alt="@Model.Title" class="img-fluid rounded shadow-sm" />
                </div>
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-book fa-5x text-muted mb-3"></i>
                    <p class="text-muted">Chưa có ảnh bìa</p>
                </div>
            </div>
        }
    </div>
</div>

<!-- Action Buttons -->
<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.BookId" class="btn btn-primary">
        <i class="fas fa-edit me-2"></i>Chỉnh sửa
    </a>
    <a asp-action="Delete" asp-route-id="@Model.BookId" class="btn btn-danger">
        <i class="fas fa-trash me-2"></i>Xóa
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-list me-2"></i>Danh sách
    </a>
</div>
