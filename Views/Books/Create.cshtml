@model QuanLyThuVienTruongHoc.Models.Library.Book

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Thêm sách mới";
}

<!-- Page Header -->
<div class="page-header">
    <h1><i class="fas fa-plus-circle me-2"></i>Thêm sách mới</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
    </a>
</div>

<!-- Form Card -->
<div class="form-card">
    <div class="card-header">
        <h4><i class="fas fa-book me-2"></i>Thông tin sách</h4>
    </div>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="alert alert-danger" role="alert" style="display:none;"></div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="bookNumber" class="form-label">
                        <i class="fas fa-barcode me-1"></i>Số thứ tự sách <span class="text-danger">*</span>
                    </label>
                    <input type="text" id="bookNumber" class="form-control" maxlength="4" 
                           placeholder="VD: 0001, 0025" pattern="\d{4}" />
                    <span id="bookNumberError" class="text-danger" style="display:none;"></span>
                    <small class="text-muted">Nhập 4 chữ số (VD: 0001). Mã sách sẽ tự động tạo khi chọn thể loại.</small>
                    
                    <!-- Hidden field for actual BookId -->
                    <input asp-for="BookId" type="hidden" />
                    <span asp-validation-for="BookId" class="text-danger"></span>
                    
                    <!-- Display generated BookId -->
                    <div id="generatedBookId" class="mt-2" style="display:none;">
                        <strong>Mã sách:</strong> <span id="displayBookId" class="badge bg-primary"></span>
                   </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">
                        <i class="fas fa-heading me-1"></i>Tên sách <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Title" class="form-control" maxlength="200" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Author" class="form-label">
                        <i class="fas fa-user-edit me-1"></i>Tác giả <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Author" class="form-control" maxlength="150" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Publisher" class="form-label">
                        <i class="fas fa-building me-1"></i>Nhà xuất bản <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Publisher" class="form-control" maxlength="150" />
                    <span asp-validation-for="Publisher" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label">
                        <i class="fas fa-tag me-1"></i>Thể loại <span class="text-danger">*</span>
                    </label>
                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
                        <option value="">-- Chọn thể loại --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="PublishYear" class="form-label">
                        <i class="fas fa-calendar me-1"></i>Năm xuất bản <span class="text-danger">*</span>
                    </label>
                    <input asp-for="PublishYear" class="form-control" type="number" />
                    <span asp-validation-for="PublishYear" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="Quantity" class="form-label">
                        <i class="fas fa-sort-numeric-up me-1"></i>Số lượng <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Quantity" class="form-control" type="number" min="0" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Location" class="form-label">
                <i class="fas fa-map-marker-alt me-1"></i>Vị trí kệ <span class="text-danger">*</span>
            </label>
            <input asp-for="Location" class="form-control" maxlength="50" placeholder="VD: Kệ A1, Tầng 2" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">
                <i class="fas fa-image me-1"></i>Ảnh bìa sách
            </label>
            <input type="file" name="imageFile" class="form-control" accept=".jpg,.jpeg,.png,.webp" />
            <small class="text-muted">Chỉ chấp nhận JPG, JPEG, PNG, WEBP. Tối đa 5MB.</small>
        </div>

        <hr />

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i>Lưu sách
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times me-2"></i>Hủy bỏ
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/form-utils.js"></script>
    <script src="~/js/books-create.js" asp-append-version="true"></script>
}
