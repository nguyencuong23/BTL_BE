@* Views/Shared/_AdminLayout.cshtml - Modern Admin Dashboard Layout *@
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <!-- Custom Admin CSS -->
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/crud.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/validation.css" asp-append-version="true" />
</head>
<body>
    <!-- SIDEBAR -->
    <aside class="admin-sidebar">
        <div class="sidebar-header">
            <div class="logo-icon">
                <i class="fas fa-book"></i>
            </div>
            <div class="logo-text">Admin Panel</div>
        </div>

        <nav class="sidebar-menu">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a asp-controller="Admin" asp-action="Index" 
                       class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
                        <i class="fas fa-home"></i>
                        <span>Dashboard</span>
                    </a>
                </li>

                <!-- CRUD Management Links -->
                <li class="nav-item mt-3">
                    <small class="text-muted px-3 text-uppercase" style="font-size: 0.7rem; letter-spacing: 0.5px;">Quản lý CRUD</small>
                </li>

                <li class="nav-item">
                    <a asp-controller="Categories" asp-action="Index" 
                       class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Categories" ? "active" : "")">
                        <i class="fas fa-tags"></i>
                        <span>Thể loại sách</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a asp-controller="Books" asp-action="Index" 
                       class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Books" ? "active" : "")">
                        <i class="fas fa-book"></i>
                        <span>Quản lý sách</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a asp-controller="Readers" asp-action="Index" 
                       class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Readers" ? "active" : "")">
                        <i class="fas fa-user-graduate"></i>
                        <span>Sinh viên/Độc giả</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a asp-controller="Librarians" asp-action="Index" 
                       class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Librarians" ? "active" : "")">
                        <i class="fas fa-user-tie"></i>
                        <span>Thủ thư/Admin</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a asp-controller="Loans" asp-action="Index" 
                       class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Loans" ? "active" : "")">
                        <i class="fas fa-exchange-alt"></i>
                        <span>Quản lý mượn trả</span>
                    </a>
                </li>

                <!-- Existing Admin Links -->
                <li class="nav-item mt-3">
                    <small class="text-muted px-3 text-uppercase" style="font-size: 0.7rem; letter-spacing: 0.5px;">Khác</small>
                </li>

                <li class="nav-item">
                    <a asp-controller="Admin" asp-action="Settings" 
                       class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["action"]?.ToString() == "Settings" ? "active" : "")">
                        <i class="fas fa-cog"></i>
                        <span>Cài đặt hệ thống</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a asp-controller="Client" asp-action="Index" 
                       target="_blank"
                       class="nav-link">
                        <i class="fas fa-external-link-alt"></i>
                        <span>Giao diện Client</span>
                    </a>
                </li>
            </ul>
        </nav>

        <div class="sidebar-footer">
            <small>&copy; @DateTime.Now.Year - Thư viện Đại Nam</small>
        </div>
    </aside>

    <!-- TOPBAR -->
    <header class="admin-topbar">
        <h1 class="topbar-title">@ViewData["Title"]</h1>
        
        <div class="topbar-user">
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <div class="dropdown">
                    <button class="btn btn-link text-decoration-none text-dark p-0 d-flex align-items-center gap-2" 
                            type="button" 
                            id="userDropdown" 
                            data-bs-toggle="dropdown" 
                            aria-expanded="false">
                        <div class="user-info">
                            <div class="user-avatar">
                                @if (!string.IsNullOrEmpty(User.Identity.Name))
                                {
                                    @User.Identity.Name.Substring(0, 1).ToUpper()
                                }
                            </div>
                            <div class="user-details">
                                <div class="user-name">@User.Identity.Name</div>
                                <div class="user-role">Admin</div>
                            </div>
                        </div>
                        <i class="fas fa-chevron-down text-muted"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                        <li>
                            <a class="dropdown-item" asp-controller="Profile" asp-action="Index">
                                <i class="fas fa-user-circle"></i>
                                <span>Thông tin cá nhân</span>
                            </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">
                                <i class="fas fa-sign-out-alt"></i>
                                <span>Đăng xuất</span>
                            </a>
                        </li>
                    </ul>
                </div>
            }
        </div>
    </header>

    <!-- CONTENT AREA -->
    <main class="admin-content">
        @await Html.PartialAsync("_Alerts")
        @RenderBody()
    </main>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
