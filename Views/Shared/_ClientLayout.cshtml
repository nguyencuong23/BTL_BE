﻿
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Thư viện Đại học Đại Nam</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">

    <style>
        :root {
            --primary: #0b1d36;
            --secondary: #2563eb;
            --accent: #f59e0b;
            --bg: #f4f7fb;
            --text: #1f2937;
        }

        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            background: var(--bg);
            color: var(--text);
            font-family: 'Segoe UI', sans-serif;
        }

        header {
            background: linear-gradient(90deg, #0b1d36, #102a4d);
            color: #fff;
        }

            header a {
                color: #fff;
                text-decoration: none;
                margin-left: 22px;
                font-weight: 500;
                position: relative;
            }

                /* Chỉ áp dụng ::after cho link thông thường, không áp dụng cho dropdown */
                header a:not(.dropdown-item)::after {
                    content: "";
                    position: absolute;
                    left: 0;
                    bottom: -5px;
                    width: 0;
                    height: 2px;
                    background: var(--accent);
                    transition: .3s;
                }

                header a:not(.dropdown-item):hover::after {
                    width: 100%;
                }

            /* Đảm bảo dropdown button không bị ảnh hưởng bởi style của header a */
            header .dropdown-toggle {
                margin-left: 22px;
            }

            /* Lỗi 1: Xóa mũi tên tam giác của dropdown-toggle */
            header .dropdown-toggle::after {
                display: none !important;
            }

            /* Lỗi 2: Fix hover bị lòi ra ngoài - đảm bảo dropdown-menu và item có padding đúng */
            header .dropdown-menu {
                padding: 0.25rem 0;
                min-width: 200px;
                margin: 0;
            }

            header .dropdown-item {
                padding: 0.5rem 1rem;
                margin: 0;
                border-radius: 0;
            }

            header .dropdown-item:hover,
            header .dropdown-item:focus {
                background-color: var(--bs-dropdown-link-hover-bg);
                margin: 0;
                border-radius: 0;
            }

        main {
            flex: 1;
            padding: 20px 0;
        }

        footer {
            background: var(--primary);
            color: #dbeafe;
        }

            footer a {
                color: #dbeafe;
                font-size: 20px;
                margin-right: 14px;
            }

                footer a:hover {
                    color: var(--accent);
                }
    </style>
</head>

<body>

    <!-- HEADER -->
    <header>
        <div class="container-fluid px-5 py-3 d-flex justify-content-between align-items-center">
            <div class="fw-bold fs-5">
                THƯ VIỆN ĐẠI HỌC ĐẠI NAM
            </div>

            <nav class="d-flex align-items-center gap-3">
                <a asp-controller="Client" asp-action="Index">Trang chủ</a>
                <a asp-controller="Client" asp-action="TraCuu">Tra cứu</a>
                <a asp-controller="Client" asp-action="News">Tin tức</a>

                @if (User.Identity != null && User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <a class="text-danger fw-bold"
                       asp-controller="Admin"
                       asp-action="Index">
                        Trang quản trị
                    </a>
                }

                <div class="ms-auto d-flex align-items-center">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <!-- Dropdown menu cho người dùng đã đăng nhập -->
                        <div class="dropdown">
                            <button class="btn btn-link text-white text-decoration-none dropdown-toggle d-flex align-items-center gap-2" 
                                    type="button" 
                                    id="userDropdown" 
                                    data-bs-toggle="dropdown" 
                                    aria-expanded="false"
                                    style="border: none; padding: 0; font-weight: 500;">
                                <i class="fa fa-user"></i>
                                <span>@User.Identity.Name</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Profile" asp-action="Index">
                                        <i class="fa fa-user-circle me-2"></i>Thông tin cá nhân
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Logout">
                                        <i class="fa fa-sign-out-alt me-2"></i>Đăng xuất
                                    </a>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login">Đăng nhập</a>
                    }
                </div>
            </nav>
        </div>
    </header>

    <!-- MAIN -->
    <main id="pageContent" class="container-fluid px-0">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="pt-5 mt-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h6 class="fw-bold text-white">Đại học Đại Nam</h6>
                    <p>Thư viện & Trung tâm tri thức</p>
                </div>

                <div class="col-md-4 mb-3">
                    <h6 class="text-white">Liên hệ</h6>
                    <p>Hà Đông, Hà Nội</p>
                    <p>thuvien@dainam.edu.vn</p>
                </div>

                <div class="col-md-4 mb-3">
                    <h6 class="text-white">Kết nối</h6>
                    <a href="#"><i class="fab fa-facebook"></i></a>
                    <a href="#"><i class="fab fa-youtube"></i></a>
                    <a href="#"><i class="fab fa-tiktok"></i></a>
                </div>
            </div>

            <hr class="border-secondary">
            <div class="text-center pb-3">
                © Đại học Đại Nam
            </div>
        </div>
    </footer>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>