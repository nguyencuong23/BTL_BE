@using QuanLyThuVienTruongHoc.Helpers
@inject QuanLyThuVienTruongHoc.Services.SystemSettingsService SettingsService
@{
    var systemName = await SettingsService.GetValueAsync(SettingsKeys.SystemName, "Thư viện Đại học Đại Nam");
    var address = await SettingsService.GetValueAsync(SettingsKeys.Address, "Hà Đông, Hà Nội");
    var email = await SettingsService.GetValueAsync(SettingsKeys.AdminEmail, "thuvien@dainam.edu.vn");
    var phone = await SettingsService.GetValueAsync(SettingsKeys.ContactPhone, "0243.123.4567");
    var fbUrl = await SettingsService.GetValueAsync(SettingsKeys.FacebookUrl, "#");
    var ytUrl = await SettingsService.GetValueAsync(SettingsKeys.YoutubeUrl, "#");
    var ttUrl = await SettingsService.GetValueAsync(SettingsKeys.TiktokUrl, "#");
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - @systemName</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link href="~/css/client-layout.css" rel="stylesheet" asp-append-version="true">
</head>

<body>

    <!-- HEADER -->
    <header>
        <div class="container-fluid px-5 py-3 d-flex justify-content-between align-items-center">
            <div class="fw-bold fs-5">
                @systemName.ToUpper()
            </div>

            <nav class="d-flex align-items-center gap-3">
                <a asp-controller="Client" asp-action="Index" 
                   class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Client" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "nav-active" : "")">
                   Trang chủ
                </a>

                <a asp-controller="Client" asp-action="Search"
                   class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Client" && ViewContext.RouteData.Values["Action"]?.ToString() == "Search" ? "nav-active" : "")">
                   Tra cứu
                </a>
                <a asp-controller="Client" asp-action="News"
                   class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Client" && ViewContext.RouteData.Values["Action"]?.ToString() == "News" ? "nav-active" : "")">
                   Tin tức
                </a>
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Client" asp-action="Loans"
                       class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Client" && ViewContext.RouteData.Values["Action"]?.ToString() == "Loans" ? "nav-active" : "")">
                       Mượn trả sách
                    </a>
                }

                @if (User.Identity != null && User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <a class="text-danger fw-bold"
                       asp-controller="Admin"
                       asp-action="Index">
                        Trang quản trị
                    </a>
                }

                <div class="ms-auto d-flex align-items-center">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <div class="dropdown">
                            <button class="btn btn-link text-white text-decoration-none dropdown-toggle d-flex align-items-center gap-2 dropdown-toggle-custom"
                                    type="button"
                                    id="userDropdown"
                                    data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                <i class="fa fa-user"></i>
                                <span>@User.Identity.Name</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Profile" asp-action="Index">
                                        <i class="fa fa-user-circle me-2"></i>Thông tin cá nhân
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Logout">
                                        <i class="fa fa-sign-out-alt me-2"></i>Đăng xuất
                                    </a>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login">Đăng nhập</a>
                    }
                </div>
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <div class="notification-container me-3 dropdown">
                        <button class="btn btn-link text-white text-decoration-none p-0"
                                type="button"
                                id="notificationBellBtn"
                                data-bs-toggle="dropdown"
                                aria-expanded="false">
                            <span class="notification-bell-wrap">
                                <i class="fa fa-bell fs-4"></i>
                                <span id="badgeCount" class="notification-badge badge rounded-pill bg-danger" style="display: none;">0</span>
                            </span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end notification-dropdown" id="notificationDropdown" aria-labelledby="notificationBellBtn">
                            <li class="dropdown-header d-flex justify-content-between align-items-center px-3 py-2 border-bottom">
                                <span class="fw-bold">Thông báo</span>
                                <button type="button" class="btn btn-sm btn-link p-0" id="markAllReadBtn">Đánh dấu đã đọc</button>
                            </li>
                            <li class="list-unstyled mb-0" id="notificationListWrap">
                                <ul class="list-unstyled mb-0 notification-list" id="notificationList"></ul>
                            </li>
                            <li class="text-center small text-muted py-2" id="notificationEmpty" style="display: none;">Chưa có thông báo</li>
                        </ul>
                    </div>
                }
            </nav>
        </div>
    </header>

    <!-- MAIN -->
    <main id="pageContent" class="container-fluid px-0">
        @if (IsSectionDefined("Hero"))
        {
            <div class="global-hero-header" style="background: linear-gradient(120deg, #005aab 0%, #004e92 100%); background-color: #005aab; color: white;">
                @RenderSection("Hero", required: false)
            </div>
        }
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="pt-5 mt-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h6 class="fw-bold text-white">Đại học Đại Nam</h6>
                    <p>Thư viện & Trung tâm tri thức</p>
                </div>

                <div class="col-md-4 mb-3">
                    <h6 class="text-white">Liên hệ</h6>
                    <p><i class="fas fa-map-marker-alt me-2"></i>@address</p>
                    <p><i class="fas fa-envelope me-2"></i>@email</p>
                    <p><i class="fas fa-phone me-2"></i>@phone</p>
                </div>

                <div class="col-md-4 mb-3">
                    <h6 class="text-white">Kết nối</h6>
                    <a href="@fbUrl" target="_blank"><i class="fab fa-facebook"></i></a>
                    <a href="@ytUrl" target="_blank"><i class="fab fa-youtube"></i></a>
                    <a href="@ttUrl" target="_blank"><i class="fab fa-tiktok"></i></a>
                </div>
            </div>

            <hr class="border-secondary">
            <div class="text-center pb-3">
                © Đại học Đại Nam
            </div>
        </div>
    </footer>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/notification.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>