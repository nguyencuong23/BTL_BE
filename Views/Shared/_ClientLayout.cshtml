
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Thư viện Đại học Đại Nam</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link href="~/css/client-layout.css" rel="stylesheet">
</head>

<body>

    <!-- HEADER -->
    <header>
        <div class="container-fluid px-5 py-3 d-flex justify-content-between align-items-center">
            <div class="fw-bold fs-5">
                THƯ VIỆN ĐẠI HỌC ĐẠI NAM
            </div>

            <nav class="d-flex align-items-center gap-3">
                <a asp-controller="Client" asp-action="Index" 
                   class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Client" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "nav-active" : "")">
                   Trang chủ
                </a>

                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Client" asp-action="Search"
                       class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Client" && ViewContext.RouteData.Values["Action"]?.ToString() == "Search" ? "nav-active" : "")">
                       Tra cứu
                    </a>
                }
                <a asp-controller="Client" asp-action="News"
                   class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Client" && ViewContext.RouteData.Values["Action"]?.ToString() == "News" ? "nav-active" : "")">
                   Tin tức
                </a>
                <a asp-controller="Client" asp-action="Loans"
                   class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Client" && ViewContext.RouteData.Values["Action"]?.ToString() == "Loans" ? "nav-active" : "")">
                   Mượn trả sách
                </a>

                @if (User.Identity != null && User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <a class="text-danger fw-bold"
                       asp-controller="Admin"
                       asp-action="Index">
                        Trang quản trị
                    </a>
                }

                <div class="ms-auto d-flex align-items-center">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <div class="dropdown">
                            <button class="btn btn-link text-white text-decoration-none dropdown-toggle d-flex align-items-center gap-2 dropdown-toggle-custom"
                                    type="button"
                                    id="userDropdown"
                                    data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                <i class="fa fa-user"></i>
                                <span>@User.Identity.Name</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Profile" asp-action="Index">
                                        <i class="fa fa-user-circle me-2"></i>Thông tin cá nhân
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Logout">
                                        <i class="fa fa-sign-out-alt me-2"></i>Đăng xuất
                                    </a>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login">Đăng nhập</a>
                    }
                </div>
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <div class="notification-container me-3">
                        <div id="bellBtn" class="position-relative" style="cursor: pointer;">
                            <i class="fa fa-bell fs-4 text-white"></i> <span id="badgeCount" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size: 0.7rem;">
                                !
                            </span>
                        </div>
                    </div>
                }
            </nav>
        </div>
    </header>

    <!-- MAIN -->
    <main id="pageContent" class="container-fluid px-0">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="pt-5 mt-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h6 class="fw-bold text-white">Đại học Đại Nam</h6>
                    <p>Thư viện & Trung tâm tri thức</p>
                </div>

                <div class="col-md-4 mb-3">
                    <h6 class="text-white">Liên hệ</h6>
                    <p>Hà Đông, Hà Nội</p>
                    <p>thuvien@dainam.edu.vn</p>
                </div>

                <div class="col-md-4 mb-3">
                    <h6 class="text-white">Kết nối</h6>
                    <a href="#"><i class="fab fa-facebook"></i></a>
                    <a href="#"><i class="fab fa-youtube"></i></a>
                    <a href="#"><i class="fab fa-tiktok"></i></a>
                </div>
            </div>

            <hr class="border-secondary">
            <div class="text-center pb-3">
                © Đại học Đại Nam
            </div>
        </div>
    </footer>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/notification.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>