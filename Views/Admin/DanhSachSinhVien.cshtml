@using QuanLyThuVienTruongHoc.Models.Users
@model IEnumerable<SinhVien>

@{
    ViewData["Title"] = "Danh sách sinh viên";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">@ViewData["Title"]</h2>

    <a asp-action="ThemSinhVien" class="btn btn-primary">
        + Thêm sinh viên
    </a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        Chưa có sinh viên nào trong hệ thống.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Mã sinh viên</th>
                    <th>Họ và tên</th>
                    <th>Email</th>
                    <th>Số điện thoại</th>
                    <th>Ngày sinh</th>
                    <th style="width: 150px;">Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var sv in Model)
                {
                    <tr>
                        <td>@sv.MaSinhVien</td>
                        <td>@sv.HoVaTen</td>
                        <td>@sv.Email</td>
                        <td>@sv.SoDienThoai</td>
                        <td>@sv.NgaySinh.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a asp-action="SuaSinhVien"
                               asp-route-id="@sv.Id"
                               class="btn btn-sm btn-warning">
                                Sửa
                            </a>
                            <a asp-action="XoaSinhVien"
                               asp-route-id="@sv.Id"
                               class="btn btn-sm btn-danger ms-1">
                                Xoá
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}