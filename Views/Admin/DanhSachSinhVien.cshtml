@using QuanLyThuVienTruongHoc.Models.Users
@model IEnumerable<SinhVien>

@{
    ViewData["Title"] = "Quản lý sinh viên";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-1">Danh sách sinh viên</h2>
        <p class="text-muted mb-0">Quản lý thông tin sinh viên trong hệ thống</p>
    </div>
    <a asp-action="ThemSinhVien" class="btn btn-primary">
        <i class="fas fa-user-plus me-2"></i>Thêm sinh viên
    </a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="card shadow-sm border-0">
        <div class="card-body text-center py-5">
            <i class="fas fa-users fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">Chưa có sinh viên nào trong hệ thống</h5>
            <p class="text-muted mb-4">Hãy thêm sinh viên đầu tiên để bắt đầu</p>
            <a asp-action="ThemSinhVien" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Thêm sinh viên
            </a>
        </div>
    </div>
}
else
{
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white border-bottom">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-bold">
                    <i class="fas fa-table me-2 text-primary"></i>
                    Danh sách sinh viên (@Model.Count())
                </h5>
                <div class="input-group" style="width: 300px;">
                    <span class="input-group-text bg-white">
                        <i class="fas fa-search text-muted"></i>
                    </span>
                    <input type="text" class="form-control" placeholder="Tìm kiếm..." />
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Mã sinh viên</th>
                            <th>Họ và tên</th>
                            <th>Email</th>
                            <th>Số điện thoại</th>
                            <th>Ngày sinh</th>
                            <th style="width: 150px;" class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sv in Model)
                        {
                            <tr>
                                <td><strong>@sv.MaSinhVien</strong></td>
                                <td>@sv.HoVaTen</td>
                                <td>@(sv.Email ?? "-")</td>
                                <td>@(sv.SoDienThoai ?? "-")</td>
                                <td>@sv.NgaySinh.ToString("dd/MM/yyyy")</td>
                                <td class="text-center">
                                    <a asp-action="SuaSinhVien"
                                       asp-route-id="@sv.Id"
                                       class="btn btn-sm btn-outline-primary me-1">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="XoaSinhVien"
                                       asp-route-id="@sv.Id"
                                       class="btn btn-sm btn-outline-danger"
                                       onclick="return confirm('Bạn có chắc chắn muốn xóa sinh viên này?');">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}