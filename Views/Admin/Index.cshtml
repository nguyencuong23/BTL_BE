@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Dashboard - Quản lý thư viện";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-0"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</h2>
        <p class="text-muted mb-0">Tổng quan hệ thống thư viện trường học</p>
    </div>
    <div class="text-muted">
        <i class="fas fa-calendar me-2"></i>@DateTime.Now.ToString("dd/MM/yyyy HH:mm")
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="stats-card bg-gradient-primary text-white">
            <div class="stats-icon">
                <i class="fas fa-book"></i>
            </div>
            <div class="stats-content">
                <div class="stats-number" id="stats-total-books"><i class="fas fa-spinner fa-spin"></i></div>
                <div class="stats-label">Tổng số sách</div>
            </div>
            <div class="stats-footer" id="stats-footer-books">
                <i class="fas fa-spinner fa-spin"></i> Đang tải...
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-3">
        <div class="stats-card bg-gradient-success text-white">
            <div class="stats-icon">
                <i class="fas fa-user-graduate"></i>
            </div>
            <div class="stats-content">
                <div class="stats-number" id="stats-total-readers"><i class="fas fa-spinner fa-spin"></i></div>
                <div class="stats-label">Sinh viên</div>
            </div>
            <div class="stats-footer" id="stats-footer-readers">
                <i class="fas fa-spinner fa-spin"></i> Đang tải...
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-3">
        <div class="stats-card bg-gradient-warning text-white">
            <div class="stats-icon">
                <i class="fas fa-book-reader"></i>
            </div>
            <div class="stats-content">
                <div class="stats-number" id="stats-total-borrowing"><i class="fas fa-spinner fa-spin"></i></div>
                <div class="stats-label">Đang mượn</div>
            </div>
            <div class="stats-footer" id="stats-footer-borrowing">
                <i class="fas fa-spinner fa-spin"></i> Đang tải...
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-3">
        <div class="stats-card bg-gradient-danger text-white">
            <div class="stats-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <div class="stats-content">
                <div class="stats-number" id="stats-total-overdue"><i class="fas fa-spinner fa-spin"></i></div>
                <div class="stats-label">Quá hạn</div>
            </div>
            <div class="stats-footer" id="stats-footer-overdue">
                <i class="fas fa-spinner fa-spin"></i> Đang tải...
            </div>
        </div>
    </div>
</div>

<!-- TRENDS CHARTS ROW -->
<div class="row mb-4">
    <!-- Borrow Volume Chart -->
    <div class="col-xl-6 mb-3">
        <div class="dashboard-card h-100 shadow-sm">
            <div class="card-header bg-transparent border-bottom-0 pt-4 px-4">
                <h5 class="mb-0 fw-bold text-gray-800"><i class="fas fa-chart-bar me-2 text-primary"></i>Xu hướng mượn sách</h5>
                <small class="text-muted">Số lượng phiếu mượn trong 30 ngày qua</small>
            </div>
            <div class="card-body">
                <div class="chart-container" style="height: 300px;">
                    <canvas id="borrowVolumeChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Active Loans Chart -->
    <div class="col-xl-6 mb-3">
        <div class="dashboard-card h-100 shadow-sm">
            <div class="card-header bg-transparent border-bottom-0 pt-4 px-4">
                <h5 class="mb-0 fw-bold text-gray-800"><i class="fas fa-chart-line me-2 text-info"></i>Sách đang được mượn</h5>
                <small class="text-muted">Biến động số lượng sách đang lưu thông</small>
            </div>
            <div class="card-body">
                <div class="chart-container" style="height: 300px;">
                    <canvas id="activeLoansChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Charts and Recent Activity Row -->
<div class="row mb-4">
    <!-- Loan Status Chart -->
    <div class="col-lg-6 mb-3">
        <div class="dashboard-card h-100">
            <div class="card-header border-bottom-0 pt-4 px-4 bg-transparent">
                <h5 class="mb-0 fw-bold text-gray-800"><i class="fas fa-chart-pie me-2 text-primary"></i>Tình trạng mượn sách</h5>
            </div>
            <div class="card-body p-0">
                <div class="d-flex align-items-center h-100 p-3">
                    <!-- Chart Section -->
                    <div class="chart-container position-relative" style="width: 55%; height: 260px;">
                        <canvas id="loanStatusChart"></canvas>
                    </div>
                    <!-- Legend Section -->
                    <div class="legend-container ps-3" style="width: 45%;">
                        <div id="loanStatusLegend" class="custom-chart-legend"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Books Category Chart -->
    <div class="col-lg-6 mb-3">
        <div class="dashboard-card h-100">
            <div class="card-header border-bottom-0 pt-4 px-4 bg-transparent">
                <h5 class="mb-0 fw-bold text-gray-800"><i class="fas fa-tags me-2 text-success"></i>Sách theo thể loại</h5>
            </div>
            <div class="card-body p-0">
                <div class="d-flex align-items-center h-100 p-3">
                    <!-- Chart Section -->
                    <div class="chart-container position-relative" style="width: 55%; height: 260px;">
                        <canvas id="categoriesChart"></canvas>
                    </div>
                    <!-- Legend Section -->
                    <div class="legend-container ps-3" style="width: 45%;">
                        <div id="categoriesLegend" class="custom-chart-legend"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Loans and Top Books Row -->
<div class="row">
    <!-- Recent Loans Table -->
    <div class="col-lg-8 mb-3">
        <div class="dashboard-card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-history me-2"></i>Phiếu mượn gần đây</h5>
                <a asp-controller="Loans" asp-action="Index" class="btn btn-sm btn-outline-primary">
                    Xem tất cả <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Mã phiếu</th>
                                <th>Sinh viên</th>
                                <th>Sách</th>
                                <th>Ngày mượn</th>
                                <th>Hạn trả</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody id="recent-loans-table-body">
                            <tr>
                                <td colspan="6" class="text-center py-4">
                                    <i class="fas fa-spinner fa-spin fa-2x text-muted"></i>
                                    <p class="text-muted mt-2">Đang tải dữ liệu...</p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Borrowed Books -->
    <div class="col-lg-4 mb-3">
        <div class="dashboard-card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-fire me-2"></i>Sách được mượn nhiều</h5>
            </div>
            <div class="card-body">
                <div class="top-books-list" id="top-books-list">
                    <div class="text-center py-4">
                        <i class="fas fa-spinner fa-spin fa-2x text-muted"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/admin-dashboard.css" asp-append-version="true" />

@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
<script src="~/js/admin-dashboard.js"></script>
}
