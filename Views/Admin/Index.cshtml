@{
    ViewData["Title"] = "Dashboard";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-1">Dashboard</h2>
        <p class="text-muted mb-0">Tổng quan hệ thống quản lý thư viện</p>
    </div>
    <div>
        <span class="badge bg-success px-3 py-2">
            <i class="fas fa-circle me-1" style="font-size: 0.5rem;"></i>
            Hệ thống hoạt động bình thường
        </span>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row g-4 mb-4">
    <!-- Card 1: Tổng số sinh viên -->
    <div class="col-xl-3 col-md-6">
        <div class="stat-card">
            <div class="stat-card-icon bg-primary bg-opacity-10 text-primary">
                <i class="fas fa-user-graduate"></i>
            </div>
            <div class="stat-card-value">1,234</div>
            <div class="stat-card-label">
                <i class="fas fa-arrow-up text-success me-1"></i>
                Tổng số sinh viên
            </div>
        </div>
    </div>

    <!-- Card 2: Tổng số người dùng -->
    <div class="col-xl-3 col-md-6">
        <div class="stat-card">
            <div class="stat-card-icon bg-info bg-opacity-10 text-info">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-card-value">856</div>
            <div class="stat-card-label">
                <i class="fas fa-arrow-up text-success me-1"></i>
                Tổng số người dùng
            </div>
        </div>
    </div>

    <!-- Card 3: Admin hiện có -->
    <div class="col-xl-3 col-md-6">
        <div class="stat-card">
            <div class="stat-card-icon bg-warning bg-opacity-10 text-warning">
                <i class="fas fa-user-shield"></i>
            </div>
            <div class="stat-card-value">12</div>
            <div class="stat-card-label">
                <i class="fas fa-minus text-muted me-1"></i>
                Admin hiện có
            </div>
        </div>
    </div>

    <!-- Card 4: Hoạt động gần đây -->
    <div class="col-xl-3 col-md-6">
        <div class="stat-card">
            <div class="stat-card-icon bg-success bg-opacity-10 text-success">
                <i class="fas fa-clock"></i>
            </div>
            <div class="stat-card-value">48</div>
            <div class="stat-card-label">
                <i class="fas fa-arrow-up text-success me-1"></i>
                Hoạt động hôm nay
            </div>
        </div>
    </div>
</div>

<!-- Charts and Activity Section -->
<div class="row g-4">
    <!-- Chart Section -->
    <div class="col-lg-8">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-bottom">
                <h5 class="mb-0 fw-bold">
                    <i class="fas fa-chart-line me-2 text-primary"></i>
                    Thống kê hoạt động (7 ngày qua)
                </h5>
            </div>
            <div class="card-body p-4">
                <!-- Placeholder Chart -->
                <div class="chart-placeholder" style="height: 300px; background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%); border-radius: 8px; display: flex; align-items: center; justify-content: center;">
                    <div class="text-center text-muted">
                        <i class="fas fa-chart-area fa-3x mb-3"></i>
                        <p class="mb-0">Biểu đồ thống kê</p>
                        <small>(Có thể tích hợp Chart.js hoặc ApexCharts sau)</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="col-lg-4">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-bottom">
                <h5 class="mb-0 fw-bold">
                    <i class="fas fa-bell me-2 text-warning"></i>
                    Hoạt động gần đây
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="list-group list-group-flush">
                    <div class="list-group-item border-0 px-4 py-3">
                        <div class="d-flex align-items-start">
                            <div class="flex-shrink-0">
                                <div class="bg-primary bg-opacity-10 rounded-circle p-2">
                                    <i class="fas fa-user-plus text-primary"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="mb-1">Sinh viên mới đăng ký</h6>
                                <p class="text-muted mb-0 small">Nguyễn Văn A - 5 phút trước</p>
                            </div>
                        </div>
                    </div>

                    <div class="list-group-item border-0 px-4 py-3">
                        <div class="d-flex align-items-start">
                            <div class="flex-shrink-0">
                                <div class="bg-success bg-opacity-10 rounded-circle p-2">
                                    <i class="fas fa-book text-success"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="mb-1">Sách mới được thêm</h6>
                                <p class="text-muted mb-0 small">15 phút trước</p>
                            </div>
                        </div>
                    </div>

                    <div class="list-group-item border-0 px-4 py-3">
                        <div class="d-flex align-items-start">
                            <div class="flex-shrink-0">
                                <div class="bg-info bg-opacity-10 rounded-circle p-2">
                                    <i class="fas fa-exchange-alt text-info"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="mb-1">Giao dịch mượn trả</h6>
                                <p class="text-muted mb-0 small">30 phút trước</p>
                            </div>
                        </div>
                    </div>

                    <div class="list-group-item border-0 px-4 py-3">
                        <div class="d-flex align-items-start">
                            <div class="flex-shrink-0">
                                <div class="bg-warning bg-opacity-10 rounded-circle p-2">
                                    <i class="fas fa-exclamation-triangle text-warning"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="mb-1">Cảnh báo sách quá hạn</h6>
                                <p class="text-muted mb-0 small">1 giờ trước</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row g-4 mt-2">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-bottom">
                <h5 class="mb-0 fw-bold">
                    <i class="fas fa-bolt me-2 text-warning"></i>
                    Thao tác nhanh
                </h5>
            </div>
            <div class="card-body p-4">
                <div class="row g-3">
                    <div class="col-md-3">
                        <a asp-controller="Admin" asp-action="ThemSinhVien" class="btn btn-outline-primary w-100 py-3">
                            <i class="fas fa-user-plus fa-2x mb-2 d-block"></i>
                            <span>Thêm sinh viên</span>
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Admin" asp-action="DanhSachSinhVien" class="btn btn-outline-info w-100 py-3">
                            <i class="fas fa-list fa-2x mb-2 d-block"></i>
                            <span>Danh sách sinh viên</span>
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Admin" asp-action="UserManagement" class="btn btn-outline-success w-100 py-3">
                            <i class="fas fa-user-cog fa-2x mb-2 d-block"></i>
                            <span>Quản lý người dùng</span>
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Admin" asp-action="Statistics" class="btn btn-outline-warning w-100 py-3">
                            <i class="fas fa-chart-bar fa-2x mb-2 d-block"></i>
                            <span>Xem thống kê</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
