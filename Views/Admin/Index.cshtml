@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Dashboard - Quản lý thư viện";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-0"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</h2>
        <p class="text-muted mb-0">Tổng quan hệ thống thư viện trường học</p>
    </div>
    <div class="text-muted">
        <i class="fas fa-calendar me-2"></i>@DateTime.Now.ToString("dd/MM/yyyy HH:mm")
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="stats-card bg-gradient-primary text-white">
            <div class="stats-icon">
                <i class="fas fa-book"></i>
            </div>
            <div class="stats-content">
                <div class="stats-number">@ViewBag.TotalBooks</div>
                <div class="stats-label">Tổng số sách</div>
            </div>
            <div class="stats-footer">
                <i class="fas fa-arrow-up text-success"></i> +5% so với tháng trước
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-3">
        <div class="stats-card bg-gradient-success text-white">
            <div class="stats-icon">
                <i class="fas fa-user-graduate"></i>
            </div>
            <div class="stats-content">
                <div class="stats-number">@ViewBag.TotalReaders</div>
                <div class="stats-label">Sinh viên</div>
            </div>
            <div class="stats-footer">
                <i class="fas fa-users"></i> Đang hoạt động
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-3">
        <div class="stats-card bg-gradient-warning text-white">
            <div class="stats-icon">
                <i class="fas fa-book-reader"></i>
            </div>
            <div class="stats-content">
                <div class="stats-number">@ViewBag.TotalBorrowing</div>
                <div class="stats-label">Đang mượn</div>
            </div>
            <div class="stats-footer">
                <i class="fas fa-clock"></i> Cập nhật realtime
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-3">
        <div class="stats-card bg-gradient-danger text-white">
            <div class="stats-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <div class="stats-content">
                <div class="stats-number">@ViewBag.TotalOverdue</div>
                <div class="stats-label">Quá hạn</div>
            </div>
            <div class="stats-footer">
                <i class="fas fa-bell"></i> Cần xử lý
            </div>
        </div>
    </div>
</div>

<!-- Charts and Recent Activity Row -->
<div class="row mb-4">
    <!-- Loan Status Chart -->
    <div class="col-lg-4 mb-3">
        <div class="dashboard-card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Tình trạng mượn sách</h5>
            </div>
            <div class="card-body text-center" style="height: 350px;">
                <canvas id="loanStatusChart"></canvas>
                <div class="chart-legend mt-3">
                    <div class="legend-item">
                        <span class="legend-dot bg-success"></span> Đã trả: <strong>@ViewBag.TotalReturned</strong>
                    </div>
                    <div class="legend-item">
                        <span class="legend-dot bg-warning"></span> Đang mượn: <strong>@ViewBag.TotalBorrowing</strong>
                    </div>
                    <div class="legend-item">
                        <span class="legend-dot bg-danger"></span> Quá hạn: <strong>@ViewBag.TotalOverdue</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Books Category Chart -->
    <div class="col-lg-4 mb-3">
        <div class="dashboard-card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-tags me-2"></i>Sách theo thể loại</h5>
            </div>
            <div class="card-body text-center" style="height: 350px;">
                <canvas id="categoriesChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="col-lg-4 mb-3">
        <div class="dashboard-card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Thao tác nhanh</h5>
            </div>
            <div class="card-body" style="height: 350px;">
                <div class="quick-actions">
                    <a asp-controller="Loans" asp-action="Create" class="quick-action-btn bg-primary">
                        <i class="fas fa-plus-circle"></i>
                        <span>Tạo phiếu mượn</span>
                    </a>
                    <a asp-controller="Books" asp-action="Create" class="quick-action-btn bg-success">
                        <i class="fas fa-book"></i>
                        <span>Thêm sách mới</span>
                    </a>
                    <a asp-controller="Readers" asp-action="Create" class="quick-action-btn bg-info">
                        <i class="fas fa-user-plus"></i>
                        <span>Thêm sinh viên</span>
                    </a>
                    <a asp-controller="Loans" asp-action="Index" class="quick-action-btn bg-warning">
                        <i class="fas fa-list"></i>
                        <span>Xem phiếu mượn</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Loans and Top Books Row -->
<div class="row">
    <!-- Recent Loans Table -->
    <div class="col-lg-8 mb-3">
        <div class="dashboard-card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-history me-2"></i>Phiếu mượn gần đây</h5>
                <a asp-controller="Loans" asp-action="Index" class="btn btn-sm btn-outline-primary">
                    Xem tất cả <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
            <div class="card-body p-0">
                @if (ViewBag.RecentLoans != null && ViewBag.RecentLoans.Count > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Mã phiếu</th>
                                    <th>Sinh viên</th>
                                    <th>Sách</th>
                                    <th>Ngày mượn</th>
                                    <th>Hạn trả</th>
                                    <th>Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var loan in ViewBag.RecentLoans)
                                {
                                    var status = loan.ReturnDate != null ? "returned" : (loan.DueDate < DateTime.Now ? "overdue" : "borrowing");
                                    <tr>
                                        <td><span class="badge bg-secondary">#@loan.LoanId</span></td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="user-avatar-small">
                                                    @loan.User.FullName[0]
                                                </div>
                                                <span class="ms-2">@loan.User.FullName</span>
                                            </div>
                                        </td>
                                        <td><small>@loan.Book.Title</small></td>
                                        <td><small>@loan.BorrowDate.ToString("dd/MM/yyyy")</small></td>
                                        <td><small>@loan.DueDate.ToString("dd/MM/yyyy")</small></td>
                                        <td>
                                            @if (status == "returned")
                                            {
                                                <span class="badge badge-returned">Đã trả</span>
                                            }
                                            else if (status == "overdue")
                                            {
                                                <span class="badge badge-overdue">Quá hạn</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-borrowing">Đang mượn</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="p-4 text-center text-muted">
                        <i class="fas fa-inbox fa-3x mb-3"></i>
                        <p>Chưa có phiếu mượn nào</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Top Borrowed Books -->
    <div class="col-lg-4 mb-3">
        <div class="dashboard-card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-fire me-2"></i>Sách được mượn nhiều</h5>
            </div>
            <div class="card-body">
                @if (ViewBag.TopBooks != null && ViewBag.TopBooks.Count > 0)
                {
                    <div class="top-books-list">
                        @for (int i = 0; i < ViewBag.TopBooks.Count; i++)
                        {
                            var book = ViewBag.TopBooks[i];
                            var rankClass = i == 0 ? "gold" : (i == 1 ? "silver" : (i == 2 ? "bronze" : ""));
                            <div class="top-book-item">
                                <div class="rank-badge @rankClass">@(i + 1)</div>
                                <div class="book-info">
                                    <div class="book-title">@book.Title</div>
                                    <small class="text-muted">@book.Author</small>
                                </div>
                                <div class="borrow-count">
                                    <span class="badge bg-primary">@book.BorrowCount <i class="fas fa-book-reader ms-1"></i></span>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-book-open fa-2x mb-2"></i>
                        <p class="mb-0">Chưa có dữ liệu</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
<script>
    // Pass server data to JavaScript
    window.adminData = {
        totalReturned: @ViewBag.TotalReturned,
        totalBorrowing: @ViewBag.TotalBorrowing,
        totalOverdue: @ViewBag.TotalOverdue,
        categoryLabels: @Html.Raw(ViewBag.CategoryLabels ?? "[]"),
        categoryData: @Html.Raw(ViewBag.CategoryData ?? "[]")
    };
</script>
<script src="~/js/admin-dashboard.js"></script>
}