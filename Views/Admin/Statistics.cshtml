@{
    ViewData["Title"] = "Thống kê";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-1">Thống kê hệ thống</h2>
        <p class="text-muted mb-0">Báo cáo và phân tích dữ liệu</p>
    </div>
    <div>
        <button class="btn btn-primary">
            <i class="fas fa-download me-2"></i>Xuất báo cáo
        </button>
    </div>
</div>

<!-- Summary Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-card-icon bg-primary bg-opacity-10 text-primary">
                <i class="fas fa-book"></i>
            </div>
            <div class="stat-card-value" id="stats-total-books"><i class="fas fa-spinner fa-spin"></i></div>
            <div class="stat-card-label">Tổng số sách</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-card-icon bg-success bg-opacity-10 text-success">
                <i class="fas fa-hand-holding"></i>
            </div>
            <div class="stat-card-value" id="stats-total-borrowing"><i class="fas fa-spinner fa-spin"></i></div>
            <div class="stat-card-label">Sách đang mượn</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-card-icon bg-warning bg-opacity-10 text-warning">
                <i class="fas fa-exclamation-circle"></i>
            </div>
            <div class="stat-card-value" id="stats-total-overdue"><i class="fas fa-spinner fa-spin"></i></div>
            <div class="stat-card-label">Sách quá hạn</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-card-icon bg-info bg-opacity-10 text-info">
                <i class="fas fa-money-bill-wave"></i>
            </div>
            <div class="stat-card-value" id="stats-total-fine"><i class="fas fa-spinner fa-spin"></i></div>
            <div class="stat-card-label">Tổng tiền phạt (VNĐ)</div>
        </div>
    </div>
</div>

<!-- Charts Row -->
<div class="row g-4 mb-4">
    <!-- Bar Chart -->
    <div class="col-lg-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-bottom">
                <h5 class="mb-0 fw-bold">
                    <i class="fas fa-chart-bar me-2 text-primary"></i>
                    Thống kê mượn sách theo tháng
                </h5>
            </div>
            <div class="card-body p-4">
                <div style="height: 300px;">
                    <canvas id="monthlyLoansChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Pie Chart -->
    <div class="col-lg-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-bottom">
                <h5 class="mb-0 fw-bold">
                    <i class="fas fa-chart-pie me-2 text-success"></i>
                    Phân loại sách
                </h5>
            </div>
            <div class="card-body p-4">
                <div style="height: 300px;">
                    <canvas id="detailsCategoriesChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
<script src="~/js/admin-dashboard.js"></script>
<script>
    // Trigger loading stats specifically for this page
    document.addEventListener("DOMContentLoaded", function() {
        if (typeof loadStatisticsPage === 'function') {
            loadStatisticsPage();
        }
    });
</script>
}
