@model QuanLyThuVienTruongHoc.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký";
}

<style>
    :root {
        --dainam-orange: #f37021;
    }

    .text-orange {
        color: var(--dainam-orange);
    }

    .btn-orange {
        background-color: var(--dainam-orange);
        color: #fff;
        font-weight: 600;
        border-radius: 6px;
    }

        .btn-orange:hover {
            background-color: #d65d16;
            color: #fff;
        }

    .register-page {
        position: relative;
        min-height: calc(100vh - 56px);
        background-image: url("https://images.unsplash.com/photo-1507842217343-583bb7270b66?ixlib=rb-1.2.1&q=85&fm=jpg&crop=entropy&cs=srgb&h=9000&w=1200&fit=clip&fm=jpg");
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .register-overlay {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.45);
    }

    .register-card {
        position: relative;
        background: #fff;
        width: 100%;
        max-width: 520px;
        padding: 35px;
        border-radius: 14px;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
        animation: fadeUp 0.6s ease;
    }

    @@keyframes fadeUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="register-page">
    <div class="register-overlay"></div>

    <div class="register-card">
        <h3 class="text-orange fw-bold mb-2">ĐẠI NAM LIBRARY</h3>
        <h5 class="mb-4">Đăng ký tài khoản</h5>

        <form asp-action="Register" method="post" autocomplete="off">

            <div class="mb-3">
                <label class="form-label">Tên đăng nhập</label>
                <input asp-for="Username" class="form-control"
                       autocomplete="new-username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Mật khẩu</label>
                <input asp-for="Password" type="password"
                       class="form-control"
                       autocomplete="new-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Nhập lại mật khẩu</label>
                <input asp-for="ConfirmPassword" type="password"
                       class="form-control"
                       autocomplete="new-password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Họ và tên</label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Số điện thoại</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-orange w-100">
                ĐĂNG KÝ
            </button>

            <div class="text-center mt-3">
                <a asp-action="Login" class="text-decoration-none text-orange fw-semibold">
                    Đã có tài khoản? Đăng nhập
                </a>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger mt-3"></div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
