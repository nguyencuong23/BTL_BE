@model QuanLyThuVienTruongHoc.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

<style>
    .register-body {
        background-color: #f4f6f9;
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    @@keyframes fadeSlideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .register-card {
        background: white;
        width: 100%;
        max-width: 500px;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        animation: fadeSlideUp 0.8s ease-out;
    }

    .register-header {
        text-align: center;
        margin-bottom: 30px;
    }

        .register-header h2 {
            color: #f37021;
            font-weight: 700;
            margin-bottom: 8px;
        }

        .register-header p {
            color: #666;
            font-size: 0.9rem;
        }

    .form-group {
        margin-bottom: 18px;
    }

    .form-label {
        display: block;
        margin-bottom: 6px;
        font-weight: 600;
        color: #444;
        font-size: 0.9rem;
    }

    .form-control {
        width: 100%;
        padding: 12px 14px;
        border: 1px solid #ddd;
        border-radius: 6px;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        box-sizing: border-box;
    }

        .form-control:focus {
            border-color: #f37021;
            outline: none;
            box-shadow: 0 0 0 3px rgba(243,112,33,0.2);
            transform: scale(1.02);
        }

    .btn-register {
        width: 100%;
        padding: 12px;
        background-color: #f37021;
        color: #fff;
        border: none;
        border-radius: 6px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.25s ease;
        margin-top: 10px;
    }

        .btn-register:hover {
            background-color: #d65d16;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(243,112,33,0.35);
        }

        .btn-register:active {
            transform: scale(0.97);
            box-shadow: none;
        }

    .text-danger {
        color: #dc3545;
        font-size: 0.8rem;
        margin-top: 4px;
        display: block;
    }

    .validation-summary-errors {
        margin-top: 15px;
        padding: 10px;
        border-radius: 6px;
        background-color: #f8d7da;
        border: 1px solid #f5c6cb;
        color: #dc3545;
        font-size: 0.9rem;
        list-style: none;
        animation: fadeSlideUp 0.6s ease-out;
    }

        .validation-summary-errors ul {
            margin: 0;
            padding-left: 0;
            list-style: none;
        }

    .login-link {
        text-align: center;
        margin-top: 20px;
        font-size: 0.9rem;
    }

        .login-link a {
            color: #f37021;
            text-decoration: none;
            font-weight: 600;
        }

            .login-link a:hover {
                text-decoration: underline;
            }
</style>

<div class="register-body">
    <div class="register-card">
        <div class="register-header">
            <h2>Đăng ký tài khoản</h2>
            <p>Hệ thống quản lý thư viện</p>
        </div>

        <form asp-action="Register" method="post">
            <div class="form-group">
                <label class="form-label">Tên đăng nhập</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="form-label">Mật khẩu</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="form-label">Nhập lại mật khẩu</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="form-label">Họ tên</label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="form-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="form-label">Số điện thoại</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-register">ĐĂNG KÝ</button>
        </form>

        <div class="login-link">
            Đã có tài khoản?
            <a asp-action="Login">Đăng nhập</a>
        </div>
    </div>
</div>
