@model QuanLyThuVienTruongHoc.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Đăng nhập - Đại Nam Library</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        :root {
            --dainam-orange: #f58220;
        }

        body {
            margin: 0;
            height: 100vh;
            font-family: 'Segoe UI', sans-serif;
            background: #f2f4f7;
        }

        /* CENTER */
        .page-center {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* CARD */
        .login-card {
            width: 1540px;
            height: 800px;
            background: #fff;
            border-radius: 24px;
            display: flex;
            overflow: hidden;
            box-shadow: 0 25px 50px rgba(0,0,0,0.15);
            animation: floatIn .8s ease;
        }

        @@keyframes floatIn {
            from

        {
            opacity: 0;
            transform: translateY(30px) scale(.97);
        }

        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }

        }

        /* IMAGE */
        .login-image {
            width: 50%;
            background-image: url('https://images.unsplash.com/photo-1521587760476-6c12a4b040da');
            background-size: cover;
            background-position: center;
            position: relative;
        }

        .image-overlay {
            position: absolute;
            inset: 0;
            background: linear-gradient( 135deg, rgba(245,130,32,0.88), rgba(0,0,0,0.55) );
            color: white;
            padding: 80px 70px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

            .image-overlay h4 {
                font-size: 32px;
                font-weight: 800;
                letter-spacing: 1px;
                margin-bottom: 14px;
            }

            .image-overlay p {
                font-size: 18px;
                opacity: 0.95;
                margin-bottom: 40px;
            }

            .image-overlay blockquote {
                font-size: 20px;
                line-height: 1.7;
                max-width: 420px;
                font-style: italic;
                border-left: 4px solid rgba(255,255,255,.85);
                padding-left: 18px;
            }

        /* FORM */
        .login-form {
            width: 50%;
            padding: 80px 90px;
        }

            .login-form h5 {
                font-size: 26px;
                font-weight: 700;
                margin-bottom: 6px;
            }

            .login-form span {
                font-size: 15px;
                color: #888;
                display: block;
                margin-bottom: 32px;
            }

            .login-form label {
                font-size: 14px;
                font-weight: 600;
                color: #444;
                margin-bottom: 6px;
            }

        .form-control {
            padding: 14px 16px;
            border-radius: 12px;
            font-size: 15px;
        }

            /* Khi click vào input */
            .form-control:focus {
                border-color: var(--dainam-orange);
                box-shadow: 0 0 0 .2rem rgba(245,130,32,.25);
            }

        .btn-login {
            background: var(--dainam-orange);
            color: white;
            border-radius: 25px;
            padding: 14px;
            font-weight: 500;
            transition: .3s;
        }

            .btn-login:hover {
                background: #e06f10;
                transform: translateY(-2px);
                box-shadow: 0 10px 25px rgba(245,130,32,.4);
            }

        .forgot {
            font-size: 14px;
            color: var(--dainam-orange);
            text-decoration: none;
        }

            .forgot:hover {
                text-decoration: underline;
            }

        .divider {
            text-align: center;
            margin: 26px 0;
            font-size: 13px;
            color: #aaa;
        }

        /* RESPONSIVE */
        @@media (max-width: 1200px) {
            .login-card

        {
            width: 95%;
            height: auto;
            flex-direction: column;
        }

        .login-image {
            width: 100%;
            height: 260px;
        }

        .login-form {
            width: 100%;
            padding: 50px;
        }

        }
    </style>
    <head>
        <meta charset="utf-8" />
        <title>Đăng nhập</title>

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />

        <link rel="stylesheet" href="~/css/login.css" />
    </head>
    <body>

        <div class="login-bg">
            <div class="overlay"></div>

            <div class="login-wrapper">
                <div class="login-card animate-float">
                    <h3 class="text-center mb-4">📚 Đăng nhập thư viện</h3>

                    <form asp-action="Login" method="post">
                        <div class="mb-3">
                            <input asp-for="Username" class="form-control" placeholder="Tên đăng nhập" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Mật khẩu" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-login w-100">
                            Đăng nhập
                        </button>
                    </form>
                </div>
            </div>
        </div>

    </body>
</html>
