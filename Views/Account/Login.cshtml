@model QuanLyThuVienTruongHoc.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Đăng nhập</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>

    <div class="bg-scene"></div>

    <div class="book-container" id="theBook">

        <div class="back-cover"></div>

        <div class="static-page">
            <div class="header-text">
                <h2>KHÔI PHỤC</h2>
                <span>Cấp lại mật khẩu</span>
            </div>

            <div style="text-align: center; margin-bottom: 20px; color: #666; font-size: 13px;">
                <p>Vui lòng nhập Mã số (SV/GV) và Email nhà trường để hệ thống gửi liên kết đặt lại mật khẩu.</p>
            </div>

            <form asp-controller="Account" asp-action="ForgotPassword" method="post" autocomplete="off" onsubmit="return handleRecovery(event)">
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-12">
                        <label class="form-label">Mã sinh viên / Giảng viên</label>
                        <input id="Rec_Username" name="Username" class="form-control" placeholder="Ví dụ: SV2024..." required>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <label class="form-label">Email đăng ký</label>
                        <input id="Rec_Email" name="Email" type="email" class="form-control" placeholder="email@truongdaihoc.edu.vn" required>
                    </div>
                </div>

                <button type="submit" class="btn btn-main btn-register">
                    <i class="fa-regular fa-paper-plane me-2"></i> GỬI YÊU CẦU
                </button>
            </form>

            <div class="switch-btn" onclick="togglePage()">
                <i class="fa-solid fa-arrow-left me-2"></i> Quay lại Đăng nhập
            </div>
        </div>

        <div class="flipping-page">

            <div class="page-front">
                <div class="header-text">
                    <h2>ĐĂNG NHẬP</h2>
                    <span>Thư viện Đại Nam</span>
                </div>

                <div class="text-center mb-4">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/d/d3/Logo_DAI_NAM.png" style="width: 80px; opacity: 0.8;">
                </div>

                <form asp-controller="Account" asp-action="Login" method="post" autocomplete="off">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center" style="font-size: 0.9rem;"></div>

                    <label class="form-label">Tài khoản</label>
                    <input name="Username" class="form-control" placeholder="Mã số sinh viên / GV" required>

                    <label class="form-label">Mật khẩu</label>
                    <input name="Password" type="password" class="form-control" placeholder="Mật khẩu" required>

                    <button type="submit" class="btn btn-main btn-login">ĐĂNG NHẬP</button>
                </form>

                <div class="switch-btn" onclick="togglePage()">
                    Quên mật khẩu? <b>Lấy lại ngay</b> <i class="fa-solid fa-arrow-right ms-1"></i>
                </div>

            </div>

            <div class="page-back">
                <div class="text-center mb-4">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/d/d3/Logo_DAI_NAM.png" style="width: 80px; opacity: 0.8;">
                </div>
                <h3 style="font-family: 'Cinzel'; color: var(--blue); margin-bottom: 10px;">DAI NAM LIBRARY</h3>

                <div style="font-size: 40px; color: var(--orange); margin: 20px 0;">
                    <i class="fa-solid fa-book-open-reader"></i>
                </div>

                <p style="color: #555; font-size: 14px; padding: 0 20px;">
                    "Hệ thống quản lý thư viện số.<br>Hỗ trợ tra cứu và mượn sách trực tuyến."
                </p>

            </div>

        </div>

    </div>

<script src="~/js/login.js"></script>

@if (ViewBag.Locked == true)
{
    <input type="hidden" id="accountLockedState" value="true" />
    <input type="hidden" id="logoutUrl" value="@Url.Action("Logout", "Account")" />
}

</body>
</html>