@model QuanLyThuVienTruongHoc.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Đăng nhập / Đăng ký - Dai Nam Library</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <style>
        :root {
            --bg-gradient: radial-gradient(circle at top, #d9b889 0, #8a5431 38%, #3b2113 82%);
            --vignette: radial-gradient(circle at center, transparent 0, transparent 40%, rgba(0, 0, 0, 0.55) 100%);
            --spine-bg: linear-gradient(160deg, #4b2b17, #2a140b, #5c331c);
            --spine-stripe: rgba(255, 255, 255, 0.08);
            --cover-bg: linear-gradient(135deg, #5c3a23, #3a2113);
            --cover-border: rgba(36, 18, 7, 0.9);
            --page-bg: rgba(255, 252, 245, 0.96);
            --page-border: rgba(191, 160, 120, 0.9);
            --accent: #c58b3b;
            --text-main: #f8f1e7;
            --text-dark: #3b2917;
            --input-bg: rgba(255, 255, 255, 0.95);
            --shadow-soft: 0 28px 70px rgba(16, 6, 0, 0.9);
            --duration: 0.9s;
            --radius-lg: 22px;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            min-height: 100vh;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
            background: var(--bg-gradient);
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--text-main);
            padding: 16px;
            overflow-x: hidden;
            position: relative;
        }

        body::before {
            content: "";
            position: fixed;
            inset: 0;
            pointer-events: none;
            background: var(--vignette);
            mix-blend-mode: multiply;
            z-index: -1;
        }

        /* Scene / perspective */
        .scene {
            position: relative;
            width: 100%;
            max-width: 940px;
            perspective: 2000px;
        }

        .scene-floating {
            animation: floatBook 7s ease-in-out infinite;
        }

        @@keyframes floatBook {
            0%   { transform: translateY(0px) translateZ(0); }
            50%  { transform: translateY(-10px) translateZ(12px); }
            100% { transform: translateY(0px) translateZ(0); }
        }

        /* BOOK WRAPPER */
        .book {
            position: relative;
            width: 100%;
            max-width: 940px;
            margin: 0 auto;
            display: flex;
            justify-content: center;
            align-items: stretch;
            gap: 0;
            transform-style: preserve-3d;
            filter: drop-shadow(0 30px 80px rgba(14, 5, 0, 0.95));
        }

        /* GÁY SÁCH 3D */
        .book-spine {
            position: relative;
            width: 105px;
            min-height: min(520px, 78vh);
            border-radius: var(--radius-lg) 0 0 var(--radius-lg);
            background: var(--spine-bg);
            box-shadow:
                inset -8px 0 20px rgba(0, 0, 0, 0.75),
                0 0 0 1px rgba(255, 255, 255, 0.05);
            display: flex;
            align-items: center;
            justify-content: center;
            transform-style: preserve-3d;
        }

        .book-spine::before {
            /* texture + highlight */
            position: absolute;
            inset: 10px 26px;
            border-radius: 999px;
            background-image:
                repeating-linear-gradient(
                    to right,
                    transparent 0,
                    transparent 4px,
                    rgba(255, 255, 255, 0.06) 4px,
                    rgba(255, 255, 255, 0.06) 5px
                );
            box-shadow:
                inset 0 0 0 1px rgba(255, 255, 255, 0.04),
                inset 2px 0 12px rgba(255, 255, 255, 0.06),
                inset -6px 0 14px rgba(0, 0, 0, 0.8);
            opacity: 0.55;
            content: "";
            pointer-events: none;
        }

        .book-spine::after {
            /* shadow khớp gáy & bìa */
            content: "";
            position: absolute;
            top: 14px;
            bottom: 14px;
            right: -13px;
            width: 28px;
            background: linear-gradient(
                to right,
                rgba(0, 0, 0, 0.86),
                rgba(0, 0, 0, 0.0)
            );
            box-shadow:
                12px 0 30px rgba(0, 0, 0, 0.95);
            opacity: 0.96;
            pointer-events: none;
        }

        .spine-inner {
            position: relative;
            transform: rotate(-90deg) translateX(-6px);
            transform-origin: center;
            text-align: center;
            color: rgba(243, 228, 205, 0.9);
            letter-spacing: 0.22em;
            font-size: 0.7rem;
            text-transform: uppercase;
            font-family: "Georgia", "Times New Roman", serif;
        }

        .spine-inner strong {
            font-size: 0.86rem;
            letter-spacing: 0.3em;
        }

        /* BOOK COVER + PAGE STACK */
        .book-cover {
            position: relative;
            flex: 1;
            min-width: 0;
            min-height: min(520px, 78vh);
            margin-left: 0;
            border-radius: 0 var(--radius-lg) var(--radius-lg) 0;
            background: var(--cover-bg);
            border: 1px solid var(--cover-border);
            box-shadow:
                inset 0 0 0 1px rgba(255, 255, 255, 0.08),
                0 26px 70px rgba(0, 0, 0, 0.9);
            padding: 8px 10px 10px 10px;
            transform-style: preserve-3d;
        }

        .page-stack {
            position: relative;
            inset: 0;
            border-radius: 0 var(--radius-lg) var(--radius-lg) 0;
            transform-style: preserve-3d;
        }

        .page-shadow-base {
            /* shadow tổng phía dưới trang */
            content: "";
            position: absolute;
            inset: 86% 8% -8%;
            border-radius: 50%;
            background: radial-gradient(ellipse at center, rgba(0, 0, 0, 0.6), transparent 70%);
            filter: blur(20px);
            transform: translateZ(-10px);
            z-index: -1;
            opacity: 0.8;
            pointer-events: none;
        }

        /* TRANG GIẤY */
        .page {
            position: absolute;
            inset: 0;
            border-radius: 18px;
            background: var(--page-bg);
            border: 1px solid var(--page-border);
            box-shadow:
                inset 0 0 0 1px rgba(255, 255, 255, 0.55),
                0 22px 50px rgba(29, 11, 0, 0.8);
            color: var(--text-dark);
            padding: 26px 30px 26px 32px;
            display: flex;
            flex-direction: column;
            gap: 18px;
            transform-style: preserve-3d;
            backface-visibility: hidden;
            overflow: visible;
            transition:
                transform var(--duration) ease-in-out,
                box-shadow var(--duration) ease-in-out;
        }

        /* LOGIN = PAGE LEFT, REGISTER = PAGE RIGHT (trục lật ở gáy) */
        .page-left {
            transform-origin: left center;
        }

        .page-right {
            transform-origin: left center; /* xoay quanh gáy / cạnh trái của trang phải */
        }

        .page-content {
            position: relative;
            z-index: 1;
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        /* Mép giấy + hiệu ứng cong */
        .page::before {
            /* mép sát gáy, tạo cảm giác chồng giấy */
            content: "";
            position: absolute;
            top: 8px;
            bottom: 8px;
            left: -10px;
            width: 20px;
            background: linear-gradient(
                to right,
                rgba(255, 255, 255, 0.9),
                rgba(230, 214, 191, 0.65),
                rgba(90, 56, 31, 0.5)
            );
            border-radius: 12px 0 0 12px;
            opacity: 0.95;
            pointer-events: none;
        }

        .page::after {
            /* mép ngoài bo tròn + cong khi lật */
            content: "";
            position: absolute;
            top: 10px;
            bottom: 10px;
            right: -4px;
            width: 18px;
            background:
                radial-gradient(circle at 0% 50%, rgba(255, 255, 255, 0.85), transparent 55%),
                linear-gradient(
                    to left,
                    rgba(0, 0, 0, 0.3),
                    rgba(0, 0, 0, 0.0)
                );
            border-radius: 0 16px 16px 0;
            opacity: 0.0;
            transform-origin: right center;
            transform: scaleX(0.5);
            pointer-events: none;
            transition:
                opacity var(--duration) ease-in-out,
                transform var(--duration) ease-in-out;
        }

        .page-header {
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

        .eyebrow {
            font-size: 0.75rem;
            letter-spacing: 0.18em;
            text-transform: uppercase;
            color: rgba(101, 70, 40, 0.9);
            font-family: "Georgia", "Times New Roman", serif;
        }

        .heading-main {
            font-size: 1.7rem;
            font-weight: 700;
            color: var(--text-dark);
            font-family: "Georgia", "Times New Roman", serif;
        }

        .page-right .heading-main {
            font-size: 1.6rem;
        }

        .heading-sub {
            font-size: 0.95rem;
            color: rgba(68, 49, 32, 0.9);
        }

        .form-wrap {
            display: flex;
            flex-direction: column;
            gap: 18px;
            margin-top: 16px;
        }

        .form-grid {
            display: flex;
            flex-direction: column;
            gap: 14px;
        }

        .page-right .form-grid {
            gap: 12px;
        }

        .form-field {
            display: flex;
            flex-direction: column;
            gap: 6px;
        }

        .form-label {
            font-size: 0.9rem;
            color: rgba(60, 41, 26, 0.98);
            font-weight: 600;
            font-family: "Georgia", "Times New Roman", serif;
        }

        .form-input {
            border-radius: 12px;
            border: 1px solid rgba(88, 63, 40, 0.4);
            padding: 9px 11px;
            font-size: 0.94rem;
            background: var(--input-bg);
            color: var(--text-dark);
            outline: none;
            transition:
                border-color 0.18s ease,
                box-shadow 0.18s ease,
                background 0.18s ease,
                transform 0.18s ease;
        }

        .form-input::placeholder {
            color: rgba(88, 63, 40, 0.6);
        }

        .form-input:hover {
            border-color: rgba(197, 139, 59, 0.9);
            box-shadow: 0 0 0 1px rgba(197, 139, 59, 0.35), 0 10px 25px rgba(42, 21, 8, 0.45);
            background: rgba(255, 255, 255, 0.98);
            transform: translateY(-1px);
        }

        .form-input:focus-visible {
            border-color: rgba(197, 139, 59, 1);
            box-shadow: 0 0 0 2px rgba(197, 139, 59, 0.6), 0 14px 32px rgba(42, 21, 8, 0.55);
            background: rgba(255, 255, 255, 1);
            transform: translateY(-1px);
        }

        .form-actions {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 10px;
            margin-top: 4px;
        }

        .remember-wrap {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 0.82rem;
            color: rgba(68, 49, 32, 0.9);
        }

        .remember-wrap input[type="checkbox"] {
            width: 16px;
            height: 16px;
            accent-color: var(--accent);
            cursor: pointer;
        }

        .forgot-link {
            font-size: 0.82rem;
            color: rgba(123, 78, 35, 0.96);
            text-decoration: none;
            position: relative;
            padding-bottom: 1px;
        }

        .forgot-link::after {
            content: "";
            position: absolute;
            left: 0;
            bottom: 0;
            width: 0;
            height: 1px;
            background: rgba(123, 78, 35, 0.96);
            transition: width 0.2s ease;
        }

        .forgot-link:hover::after {
            width: 100%;
        }

        .btn {
            border-radius: 999px;
            border: none;
            font-size: 0.95rem;
            font-weight: 600;
            padding: 9px 18px;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 6px;
            transition:
                transform 0.16s ease,
                box-shadow 0.16s ease,
                background 0.18s ease,
                color 0.18s ease,
                border-color 0.18s ease;
            white-space: nowrap;
        }

        .btn-primary {
            background: linear-gradient(120deg, #c58b3b, #e5b462);
            color: #2b1606;
            box-shadow: 0 12px 30px rgba(43, 18, 2, 0.7);
        }

        .btn-primary:hover {
            transform: translateY(-2px) translateZ(10px) scale(1.01);
            box-shadow: 0 16px 40px rgba(43, 18, 2, 0.85);
            background: linear-gradient(120deg, #b17225, #d9a64f);
        }

        .btn-primary:active {
            transform: translateY(0px) scale(0.99);
            box-shadow: 0 6px 20px rgba(43, 18, 2, 0.8);
        }

        .btn-text {
            background: transparent;
            color: rgba(123, 78, 35, 0.98);
            padding-inline: 0;
            border-radius: 0;
            font-weight: 600;
            position: relative;
        }

        .btn-text::after {
            content: "";
            position: absolute;
            left: 0;
            bottom: -3px;
            width: 0;
            height: 1px;
            background: rgba(123, 78, 35, 0.98);
            transition: width 0.18s ease;
        }

        .btn-text:hover::after {
            width: 100%;
        }

        .flip-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 14px;
            font-size: 0.86rem;
            gap: 8px;
            color: rgba(68, 49, 32, 0.95);
        }

        .flip-row span {
            flex: 1;
        }

        .chip {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 5px 10px;
            border-radius: 999px;
            background: rgba(197, 139, 59, 0.1);
            border: 1px solid rgba(197, 139, 59, 0.6);
            font-size: 0.78rem;
            color: rgba(68, 49, 32, 0.96);
            margin-top: auto;
            align-self: flex-start;
        }

        .chip-dot {
            width: 7px;
            height: 7px;
            border-radius: 50%;
            background: rgba(24, 164, 91, 0.96);
            box-shadow: 0 0 0 3px rgba(24, 164, 91, 0.25);
        }

        /* PAGE STATES (flip theo gáy) */
        .page--login {
            transform: rotateY(0deg);
        }

        .page--register {
            transform: rotateY(-180deg);
        }

        .page-stack.show-register .page--login {
            transform: rotateY(180deg);
            box-shadow:
                inset 0 0 0 1px rgba(255, 255, 255, 0.4),
                0 16px 40px rgba(29, 11, 0, 0.7);
        }

        .page-stack.show-register .page--register {
            transform: rotateY(0deg);
        }

        /* Hiệu ứng cong giấy khi đang lật */
        .page-stack.is-flipping .page::after {
            opacity: 1;
            transform: scaleX(1);
        }

        .page-stack.is-flipping .page {
            animation: pageBend var(--duration) ease-in-out;
        }

        @@keyframes pageBend {
            0% {
                transform-origin: left center;
            }
            45% {
                transform-origin: 30% center;
            }
            100% {
                transform-origin: left center;
            }
        }

        /* RESPONSIVE */
        @@media (max-width: 900px) {
            .scene { max-width: 760px; }
            .book { max-width: 760px; }
            .book-spine { width: 90px; }
            .page {
                padding: 22px 22px 22px 26px;
            }
        }

        @@media (max-width: 768px) {
            .scene { max-width: 520px; }

            .book {
                max-width: 520px;
            }

            .book-spine {
                width: 80px;
                min-height: min(460px, 76vh);
            }

            .page {
                padding: 22px 20px 22px 24px;
            }

            .heading-main {
                font-size: 1.55rem;
            }

            .page-right .heading-main {
                font-size: 1.45rem;
            }

            .form-actions {
                flex-direction: column;
                align-items: stretch;
            }

            .form-actions > * {
                width: 100%;
                justify-content: center;
            }

            .flip-row {
                flex-direction: column;
                align-items: flex-start;
            }

            .flip-row span {
                width: 100%;
            }
        }

        @@media (max-width: 480px) {
            .scene { max-width: 380px; }
            .heading-main { font-size: 1.35rem; }

            .book-spine { display: none; }

            .book-cover {
                border-radius: var(--radius-lg);
            }

            .page {
                border-radius: var(--radius-lg);
            }

            .page::before {
                left: 0;
                width: 14px;
            }
        }
    </style>
</head>
<body>
    <main class="scene scene-floating" aria-label="Sổ đăng nhập / đăng ký thư viện">
        <section class="book">
            <!-- LEFT: SPINE (Gáy sách 3D) -->
            <aside class="book-spine" aria-hidden="true">
                <div class="spine-inner">
                    <div>Dai Nam University</div>
                    <strong>LIBRARY</strong>
                </div>
            </aside>

            <!-- RIGHT: BÌA + TRANG GIẤY -->
            <section class="book-cover">
                <section class="page-stack" id="pageStack" data-state="login" aria-live="polite" aria-atomic="true">
                    <div class="page-shadow-base"></div>

                    <!-- LOGIN PAGE (Trang trái) -->
                    <article class="page page-left page--login" aria-label="Trang đăng nhập">
                        <div class="page-content">
                            <header class="page-header">
                                <span class="eyebrow">ĐĂNG NHẬP</span>
                                <h1 class="heading-main">Chào mừng trở lại.</h1>
                                <p class="heading-sub">
                                    Truy cập hệ thống quản lý thư viện, theo dõi lượt mượn và tài liệu học tập của bạn.
                                </p>
                            </header>

                            <form asp-action="Login" method="post" autocomplete="off" class="form-wrap" aria-label="Biểu mẫu đăng nhập">
                                <div class="form-grid">
                                    <div class="form-field">
                                        <label class="form-label" asp-for="Username">Tên đăng nhập</label>
                                        <input class="form-input" asp-for="Username" id="login-username" autocomplete="username" placeholder="Mã sinh viên hoặc email" />
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>

                                    <div class="form-field">
                                        <label class="form-label" asp-for="Password">Mật khẩu</label>
                                        <input class="form-input" asp-for="Password" id="login-password" type="password" autocomplete="current-password" placeholder="Nhập mật khẩu" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-actions">
                                    <label class="remember-wrap">
                                        <input type="checkbox" name="RememberMe" />
                                        <span>Ghi nhớ tôi trên thiết bị này</span>
                                    </label>
                                    <a class="forgot-link" asp-action="ForgotPassword" aria-label="Quên mật khẩu">
                                        Quên mật khẩu?
                                    </a>
                                </div>

                                <div class="form-actions">
                                    <button type="submit" class="btn btn-primary">
                                        Đăng nhập
                                    </button>
                                </div>

                                <div class="flip-row">
                                    <span>Chưa có tài khoản? Đăng ký ngay để sử dụng thư viện đầy đủ chức năng.</span>
                                    <button
                                        type="button"
                                        class="btn btn-text"
                                        id="btnGoRegister"
                                        aria-label="Chưa có tài khoản? Đăng ký"
                                        aria-pressed="false"
                                    >
                                        Chưa có tài khoản? Đăng ký
                                    </button>
                                </div>

                                <div asp-validation-summary="ModelOnly" class="text-danger mt-3"></div>
                            </form>

                            <div class="chip" aria-hidden="true">
                                <span class="chip-dot"></span>
                                <span>Không gian học tập an toàn &amp; riêng tư</span>
                            </div>
                        </div>
                    </article>

                    <!-- REGISTER PAGE (Trang phải) -->
                    <article class="page page-right page--register" aria-label="Trang đăng ký">
                        <div class="page-content">
                            <header class="page-header">
                                <span class="eyebrow">ĐĂNG KÝ</span>
                                <h1 class="heading-main">Tạo tài khoản thư viện.</h1>
                                <p class="heading-sub">
                                    Điền thông tin bên dưới để đăng ký tài khoản thư viện sinh viên. Mọi thông tin sẽ được bảo mật.
                                </p>
                            </header>

                            <form asp-action="Register" method="post" autocomplete="off" class="form-wrap" aria-label="Biểu mẫu đăng ký">
                                <div class="form-grid">
                                    <div class="form-field">
                                        <label class="form-label" for="register-username">Tên đăng nhập</label>
                                        <input
                                            class="form-input"
                                            type="text"
                                            id="register-username"
                                            name="Username"
                                            autocomplete="username"
                                            placeholder="Mã sinh viên hoặc tên đăng nhập"
                                            required
                                        />
                                    </div>

                                    <div class="form-field">
                                        <label class="form-label" for="register-fullname">Họ và tên</label>
                                        <input
                                            class="form-input"
                                            type="text"
                                            id="register-fullname"
                                            name="FullName"
                                            autocomplete="name"
                                            placeholder="Họ và tên đầy đủ"
                                            required
                                        />
                                    </div>

                                    <div class="form-field">
                                        <label class="form-label" for="register-email">Email</label>
                                        <input
                                            class="form-input"
                                            type="email"
                                            id="register-email"
                                            name="Email"
                                            autocomplete="email"
                                            placeholder="Email trường hoặc cá nhân"
                                        />
                                    </div>

                                    <div class="form-field">
                                        <label class="form-label" for="register-password">Mật khẩu</label>
                                        <input
                                            class="form-input"
                                            type="password"
                                            id="register-password"
                                            name="Password"
                                            autocomplete="new-password"
                                            placeholder="Tối thiểu 8 ký tự"
                                            required
                                        />
                                    </div>

                                    <div class="form-field">
                                        <label class="form-label" for="register-confirm">Xác nhận mật khẩu</label>
                                        <input
                                            class="form-input"
                                            type="password"
                                            id="register-confirm"
                                            name="ConfirmPassword"
                                            autocomplete="new-password"
                                            placeholder="Nhập lại mật khẩu"
                                            required
                                        />
                                    </div>
                                </div>

                                <div class="form-actions">
                                    <button type="submit" class="btn btn-primary">
                                        Đăng ký
                                    </button>
                                </div>

                                <div class="flip-row">
                                    <span>← Quay lại đăng nhập để sử dụng tài khoản sẵn có.</span>
                                    <button
                                        type="button"
                                        class="btn btn-text"
                                        id="btnGoLogin"
                                        aria-label="Quay lại đăng nhập"
                                        aria-pressed="false"
                                    >
                                        ← Quay lại đăng nhập
