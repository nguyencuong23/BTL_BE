    </main>

    <script>
        (function () {
            const stack = document.getElementById("pageStack");
            const btnGoRegister = document.getElementById("btnGoRegister");
            const btnGoLogin = document.getElementById("btnGoLogin");

            if (!stack) return;

            const setState = (state) => {
                stack.dataset.state = state;
                const isRegister = state === "register";

                if (isRegister) {
                    stack.classList.add("show-register");
                    if (btnGoRegister) btnGoRegister.setAttribute("aria-pressed", "true");
                    if (btnGoLogin) btnGoLogin.setAttribute("aria-pressed", "false");
                    const regUser = document.getElementById("register-username");
                    if (regUser && typeof regUser.focus === "function") {
                        regUser.focus({ preventScroll: true });
                    }
                } else {
                    stack.classList.remove("show-register");
                    if (btnGoRegister) btnGoRegister.setAttribute("aria-pressed", "false");
                    if (btnGoLogin) btnGoLogin.setAttribute("aria-pressed", "true");
                    const loginUser = document.getElementById("login-username");
                    if (loginUser && typeof loginUser.focus === "function") {
                        loginUser.focus({ preventScroll: true });
                    }
                }
            };

            const withBend = (fn) => {
                stack.classList.add("is-flipping");
                fn();
                window.setTimeout(() => {
                    stack.classList.remove("is-flipping");
                }, 950);
            };

            const goRegister = () => withBend(() => setState("register"));
            const goLogin = () => withBend(() => setState("login"));

            if (btnGoRegister) {
                btnGoRegister.addEventListener("click", goRegister);
            }
            if (btnGoLogin) {
                btnGoLogin.addEventListener("click", goLogin);
            }

            document.addEventListener("keydown", (e) => {
                if (e.key === "ArrowRight") {
                    goRegister();
                } else if (e.key === "ArrowLeft") {
                    goLogin();
                }
            });

            // initial state = login
            setState("login");
        })();
    </script>
