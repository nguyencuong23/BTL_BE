@{
    ViewData["Title"] = "Tra cứu điểm";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="fas fa-search"></i> Tra Cứu Điểm Sinh Viên</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-action="TraCuu">
                    <div class="row">
                        <div class="col-md-6 mx-auto">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Mã Sinh Viên</label>
                                <input type="text" name="maSinhVien" class="form-control form-control-lg"
                                       placeholder="Nhập mã sinh viên (VD: SV001)" required />
                                <small class="form-text text-muted">
                                    <i class="fas fa-info-circle"></i>
                                    Mã sinh viên mẫu đề xuất: SV001, SV002, SV003, SV004, SV005
                                </small>
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg w-100">
                                <i class="fas fa-search"></i> Tra cứu
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
