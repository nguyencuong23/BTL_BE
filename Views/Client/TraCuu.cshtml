@{
    ViewData["Title"] = "Tra cứu Tài liệu";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link rel="stylesheet" href="~/css/tracuu.css" asp-append-version="true" />

<section class="doc-lookup-hero">
    <div class="container text-center">
        <h1 class="hero-title">KHO TÀI LIỆU SỐ & THƯ VIỆN</h1>
        <p class="hero-subtitle">Tra cứu vị trí sách và tài liệu trong toàn bộ hệ thống</p>

        <div class="search-box-wrapper animate-slide-down">
            <form onsubmit="handleDocSearch(event); return false;">
                <div class="search-input-group">
                    <div class="filter-select-wrapper">
                        <div class="select-icon"><i class="fa-solid fa-layer-group"></i></div>
                        <select id="shelfSelect" class="form-select-custom" onchange="handleDocSearch()">
                            <option value="all">Tất cả kệ sách</option>
                        </select>
                        <div class="select-arrow"><i class="fa-solid fa-chevron-down"></i></div>
                    </div>

                    <div class="input-divider"></div>

                    <input type="text" id="searchInput" class="search-input" placeholder="Nhập tên sách, tác giả để tìm vị trí...">

                    <button type="submit" class="btn-search-doc">
                        <i class="fa-solid fa-magnifying-glass"></i> Tìm kiếm
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

<div class="container py-5">
    <div id="loadingState" class="text-center py-5" style="display: none;">
        <div class="spinner-border text-primary" role="status"></div>
        <p class="mt-3 text-muted">Đang tải dữ liệu kệ sách...</p>
    </div>

    <div id="emptyState" class="text-center py-5" style="display: none;">
        <img src="https://cdn-icons-png.flaticon.com/512/6195/6195678.png" width="100" style="opacity: 0.6; margin-bottom: 20px;">
        <h5>Không tìm thấy tài liệu nào</h5>
        <p class="text-muted">Vui lòng thử lại với từ khóa hoặc kệ sách khác.</p>
    </div>

    <div id="resultGrid" class="row g-4">
    </div>
</div>

<div id="modal-overlay" class="modal-overlay">
    <div class="glass-modal">
        <span class="close-btn">&times;</span>
        <div id="detail-content">
        </div>
    </div>
</div>

<script src="~/js/tracuu.js" asp-append-version="true"></script>