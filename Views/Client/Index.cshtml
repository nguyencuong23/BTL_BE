@model IEnumerable<QuanLyThuVienTruongHoc.Models.Library.Book>

@{
    ViewData["Title"] = "Trang chủ";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

<link rel="stylesheet" href="~/css/client-index.css" asp-append-version="true" />

<section class="hero-modern">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10 text-center" data-aos="zoom-in" data-aos-duration="1000">
                <h1 class="hero-title">
                    Thư viện <span>Đại học Đại Nam</span><br>
                    Kết nối tri thức - Kiến tạo tương lai
                </h1>
                <p class="hero-desc" data-aos="fade-up" data-aos-delay="200">
                    Hệ thống thư viện hiện đại, nguồn tài liệu phong phú, không gian học tập đầy cảm hứng dành cho sinh viên DNU.
                </p>
                <div class="search-modern" data-aos="fade-up" data-aos-delay="400">
                    <input type="text" id="homeSearchInput" class="form-control" placeholder="Tìm kiếm sách, giáo trình, tài liệu số..." onkeypress="handleEnter(event)">
                    <button class="btn btn-warning fw-bold text-dark" onclick="performSearch()">
                        <i class="fas fa-search me-2"></i> TÌM KIẾM
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="info-cards-section">
    <div class="container">
        <div class="row g-4 justify-content-center">
            <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="0">
                <div class="about-card floating-card delay-1">
                    <div class="about-icon"><i class="fas fa-university"></i></div>
                    <h5 class="text-uppercase">Triết Lý Giáo Dục</h5>
                    <p class="fw-bold fst-italic" style="color: var(--primary-color);">"Thực học - Thực hành<br>Thực danh - Thực nghiệp"</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="200">
                <div class="about-card floating-card delay-2">
                    <div class="about-icon"><i class="fas fa-book-open"></i></div>
                    <h5 class="text-uppercase">Slogan Hành Động</h5>
                    <p class="fw-bold fst-italic" style="color: var(--primary-color);">"Học để thay đổi"<br>(Learning to Change)</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="400">
                <div class="about-card floating-card delay-3">
                    <div class="about-icon"><i class="fas fa-user-graduate"></i></div>
                    <h5 class="text-uppercase">Cam Kết Nhà Trường</h5>
                    <p class="fw-bold fst-italic" style="color: var(--primary-color);">"Việc làm của sinh viên<br>là ưu tiên số 1"</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="book-section">
    <div class="container">
        <div class="text-center" data-aos="fade-down">
            <h3 class="section-title">Sách & Giáo trình mới nhất</h3>
            <p class="section-subtitle">Cập nhật liên tục các đầu sách phục vụ đào tạo và nghiên cứu</p>
        </div>
        <div class="swiper myBookSwiper" data-aos="fade-up" data-aos-delay="300">
            <div class="swiper-wrapper" id="book-carousel-inner">
                @if (Model != null && Model.Any())
                {
                    foreach (var book in Model)
                    {
                        var imgUrl = !string.IsNullOrEmpty(book.ImagePath) ? book.ImagePath : "https://via.placeholder.com/300x450?text=No+Image";
                        <div class="swiper-slide">
                            <a href="@Url.Action("Search", "Client", new { search = book.Title })" class="book-card d-block h-100">
                                <div style="height: 320px; overflow: hidden; position: relative; background: #f8f9fa;">
                                    <img src="@imgUrl" style="height: 100%; width: 100%; object-fit: contain; transition: transform 0.5s;">
                                    <div style="position: absolute; top: 15px; right: 15px; background: var(--primary-color); color: white; padding: 5px 12px; border-radius: 20px; font-size: 0.8rem; font-weight: bold;">Mới</div>
                                </div>
                                <div class="p-3">
                                    <h6 class="fw-bold text-truncate mb-1" style="font-size: 1.1rem;" title="@book.Title">@book.Title</h6>
                                    <span class="d-block text-secondary small text-truncate"><i class="fas fa-user-edit me-2 text-primary"></i>@book.Author</span>
                                </div>
                            </a>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-5 w-100">
                        <p class="text-muted">Đang cập nhật dữ liệu sách...</p>
                    </div>
                }
            </div>
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
            <div class="swiper-pagination"></div>
        </div>
    </div>
</section>

<section class="facilities-section">
    <div class="container">
        <div class="section-header text-center" data-aos="fade-down">
            <h3 class="section-title">Không gian & Dịch vụ</h3>
            <p class="section-subtitle">Khám phá các tiện ích học tập đa dạng tại Thư viện Đại Nam</p>
        </div>
        <div class="row g-4">
            <div class="col-md-4 col-sm-6" data-aos="zoom-in" data-aos-delay="0">
                <a href="javascript:void(0)" onclick="openService('reading')" class="text-decoration-none">
                    <div class="facility-item">
                        <img src="https://atm273446-s3user.vcos.cloudstorage.com.vn/dhdainam/asset/asset/fixed/mhynchtxrfnn6hmb1xwu20230731073240_thump.jpg" class="facility-img" alt="Reading Room">
                        <div class="facility-overlay"><span class="facility-label">Không gian đọc & Học tập</span></div>
                    </div>
                </a>
            </div>
            <div class="col-md-4 col-sm-6" data-aos="zoom-in" data-aos-delay="150">
                <a asp-controller="Client" asp-action="Search" onclick="performSearch()" class="text-decoration-none">
                    <div class="facility-item">
                        <img src="https://images.unsplash.com/photo-1481627834876-b7833e8f5570?auto=format&fit=crop&w=600&q=80" class="facility-img" alt="Search">
                        <div class="facility-overlay"><span class="facility-label">Tra cứu tài liệu</span></div>
                    </div>
                </a>
            </div>
            <div class="col-md-4 col-sm-6" data-aos="zoom-in" data-aos-delay="300">
                <a asp-controller="Client" asp-action="Loans" class="text-decoration-none">
                    <div class="facility-item">
                        <img src="https://images.unsplash.com/photo-1532012197267-da84d127e765?auto=format&fit=crop&w=600&q=80" class="facility-img" alt="Borrow">
                        <div class="facility-overlay"><span class="facility-label">Hướng dẫn mượn/trả</span></div>
                    </div>
                </a>
            </div>
            <div class="col-md-4 col-sm-6" data-aos="zoom-in" data-aos-delay="0">
                <a href="javascript:void(0)" onclick="openService('meeting')" class="text-decoration-none">
                    <div class="facility-item">
                        <img src="https://atm273446-s3user.vcos.cloudstorage.com.vn/dhdainam/asset/asset/fixed/1(1).jpg" class="facility-img" alt="Group Meeting">
                        <div class="facility-overlay"><span class="facility-label">Phòng họp nhóm</span></div>
                    </div>
                </a>
            </div>
            <div class="col-md-4 col-sm-6" data-aos="zoom-in" data-aos-delay="150">
                <a href="javascript:void(0)" onclick="openService('digital')" class="text-decoration-none">
                    <div class="facility-item">
                        <img src="https://atm273446-s3user.vcos.cloudstorage.com.vn/dhdainam/asset/asset/fixed/w88shoi0w4fhr8hwawj620230413082650_thump.jpg" class="facility-img" alt="Digital Lib">
                        <div class="facility-overlay"><span class="facility-label">Thư viện số DNU</span></div>
                    </div>
                </a>
            </div>
            <div class="col-md-4 col-sm-6" data-aos="zoom-in" data-aos-delay="300">
                <a href="javascript:void(0)" onclick="openService('categories')" class="text-decoration-none">
                    <div class="facility-item">
                        <img src="https://images.unsplash.com/photo-1550399105-c4db5fb85c18?auto=format&fit=crop&w=600&q=80" class="facility-img" alt="Categories">
                        <div class="facility-overlay"><span class="facility-label">Danh mục ngành</span></div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

<section class="partner-section">
    <div class="container">
        <div class="text-center" data-aos="fade-down">
            <h4 class="section-title" style="font-size: 2rem;">Đối tác liên kết</h4>
            <div style="width: 60px; height: 3px; background: var(--primary-color); margin: 10px auto;"></div>
        </div>

        <div class="row g-4 justify-content-center mt-4" data-aos="fade-up" data-aos-delay="200">

            <div class="col-md-4 col-sm-6">
                <a href="https://fibocapital.vn" target="_blank" class="text-decoration-none">
                    <div class="partner-box">
                        <img src="https://images.unsplash.com/photo-1556761175-5973dc0f32e7?auto=format&fit=crop&w=800&q=80"
                             class="partner-img" alt="Fibo Capital">

                        <div class="partner-overlay">
                            <span class="partner-text">Fibo Capital</span>
                            <small class="text-light opacity-75 mt-1" style="font-size: 0.8rem; text-shadow: 0 1px 3px #000;">Đầu tư & Tài chính</small>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-4 col-sm-6">
                <a href="https://www.manulife.com.vn" target="_blank" class="text-decoration-none">
                    <div class="partner-box">
                        <img src="https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?auto=format&fit=crop&w=800&q=80"
                             class="partner-img" alt="Manulife Vietnam">

                        <div class="partner-overlay">
                            <span class="partner-text">Manulife VN</span>
                            <small class="text-light opacity-75 mt-1" style="font-size: 0.8rem; text-shadow: 0 1px 3px #000;">Bảo hiểm Nhân thọ</small>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-4 col-sm-6">
                <a href="https://xuanhoa.vn" target="_blank" class="text-decoration-none">
                    <div class="partner-box">
                        <img src="https://images.unsplash.com/photo-1497215728101-856f4ea42174?auto=format&fit=crop&w=800&q=80"
                             class="partner-img" alt="Xuan Hoa Vietnam">

                        <div class="partner-overlay">
                            <span class="partner-text">Xuân Hòa VN</span>
                            <small class="text-light opacity-75 mt-1" style="font-size: 0.8rem; text-shadow: 0 1px 3px #000;">Nội thất Hàng đầu</small>
                        </div>
                    </div>
                </a>
            </div>

        </div>
    </div>
</section>

<div id="service-overlay" class="service-overlay">
    <button class="close-btn" onclick="closeService()">
        <i class="fas fa-times"></i> Đóng
    </button>
    <div class="service-content-wrapper">
        <div class="service-header" id="svc-header"></div>
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-lg-10" data-aos="fade-up">
                    <h2 class="fw-bold mb-4 display-5" id="svc-title" style="color: #2c3e50;"></h2>
                    <div id="svc-body"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="~/js/client-index.js" asp-append-version="true"></script>
}