@{
    ViewData["Title"] = "Trang chủ";
}

<style>
    :root {
        --main: #0b1d36;
        --accent: #f59e0b;
        --text-gray: #6b7280;
    }

    body {
        background: #f8fafc;
    }

    /* ===== HERO ===== */
    .hero {
        margin-top: -20px;
        padding: 130px 0;
        background: linear-gradient(rgba(11,29,54,.85), rgba(11,29,54,.85)), url('https://images.unsplash.com/photo-1524995997946-a1c2e315a42f');
        background-size: cover;
        background-position: center;
        color: #fff;
    }

        .hero h1 {
            font-size: 44px;
            line-height: 1.2;
        }

        .hero span {
            color: var(--accent);
        }

    .search-box {
        background: #fff;
        padding: 14px;
        border-radius: 18px;
        display: flex;
        gap: 12px;
        max-width: 520px;
        box-shadow: 0 25px 50px rgba(0,0,0,.35);
    }

        .search-box input {
            border: none;
        }

            .search-box input:focus {
                box-shadow: none;
            }

    /* ===== FEATURE ===== */
    .feature-img {
        height: 230px;
        border-radius: 26px;
        background-size: cover;
        background-position: center;
        position: relative;
        overflow: hidden;
        cursor: pointer;
        transition: .4s ease;
        box-shadow: 0 15px 35px rgba(0,0,0,.15);
    }

        .feature-img::before {
            content: "";
            position: absolute;
            inset: 0;
            background: linear-gradient(to top, rgba(0,0,0,.65), transparent);
        }

    .feature-overlay {
        position: absolute;
        inset: 0;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        padding: 22px;
        color: #fff;
        z-index: 2;
    }

    .feature-img h5 {
        font-weight: 600;
    }

    .feature-img p {
        font-size: 14px;
        color: #e5e7eb;
    }

    .feature-img:hover {
        transform: translateY(-10px);
        box-shadow: 0 25px 50px rgba(0,0,0,.35);
    }

    /* ===== CATEGORY ===== */
    .category {
        height: 260px;
        border-radius: 28px;
        background-size: cover;
        background-position: center;
        display: flex;
        align-items: flex-end;
        padding: 22px;
        font-weight: 600;
        color: #fff;
        position: relative;
        overflow: hidden;
        transition: .4s;
        box-shadow: 0 15px 35px rgba(0,0,0,.2);
    }

        .category::before {
            content: "";
            position: absolute;
            inset: 0;
            background: linear-gradient(to top, rgba(0,0,0,.6), transparent);
        }

        .category:hover {
            transform: translateY(-8px);
        }

    /* ===== PARTNER ===== */
    .partner-box {
        height: 100px;
        border-radius: 20px;
        background-size: cover;
        background-position: center;
        position: relative;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        font-weight: 600;
        font-size: 14px;
        text-align: center;
        transition: .4s ease;
        box-shadow: 0 12px 30px rgba(0,0,0,.2);
    }

        .partner-box::before {
            content: "";
            position: absolute;
            inset: 0;
            background: rgba(11,29,54,.7);
        }

        .partner-box span {
            position: relative;
            z-index: 2;
            padding: 0 10px;
        }

        .partner-box:hover {
            transform: translateY(-8px) scale(1.03);
            box-shadow: 0 25px 50px rgba(0,0,0,.35);
        }

    /* ===== RESPONSIVE ===== */
    @@media (max-width: 768px) {
        .hero h1

    {
        font-size: 32px;
    }

    }
</style>

<!-- HERO -->
<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-7">
                <h1 class="fw-bold mb-4">
                    Kết nối <span>tri thức</span><br />
