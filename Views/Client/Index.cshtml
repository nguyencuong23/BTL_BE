    }

    .facility-overlay {
        position: absolute;
        bottom: 25px;
        left: 25px;
        right: 25px;
        pointer-events: none;
    }

    .facility-label {
        background: rgba(255, 255, 255, 0.95);
        color: #2c3e50;
        padding: 12px 30px;
        border-radius: 50px;
        font-weight: 800;
        display: inline-block;
        box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        transition: 0.3s;
    }

    .facility-item:hover .facility-label {
        background: var(--primary-color);
        color: white;
        transform: translateY(-5px);
    }

    .partner-section {
        padding: 80px 0;
        background: #fff;
    }

    .partner-box {
        background: white;
        border-radius: 15px;
        padding: 30px;
        text-align: center;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
