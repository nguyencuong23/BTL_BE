<style>
    :root {
        --main: #0b1d36;
        --accent: #f59e0b;
        --text-gray: #6b7280;
    }

    body {
        background: #f8fafc;
    }

    /* ================= HERO ================= */
    .hero {
        margin-top: -20px;
        padding: 130px 0;
        background: linear-gradient(rgba(11,29,54,.85), rgba(11,29,54,.85)), url('https://images.unsplash.com/photo-1524995997946-a1c2e315a42f');
        background-size: cover;
        background-position: center;
        color: #fff;
    }

        .hero h1 {
            font-size: 44px;
            line-height: 1.2;
        }

        .hero span {
            color: var(--accent);
        }

    .search-box {
        background: #fff;
        padding: 14px;
        border-radius: 18px;
        display: flex;
        gap: 12px;
        max-width: 520px;
        box-shadow: 0 25px 50px rgba(0,0,0,.35);
    }

        .search-box input {
            border: none;
        }

            .search-box input:focus {
                box-shadow: none;
            }

    /* ================= FEATURE ================= */
    .feature-img {
        height: 230px;
        border-radius: 26px;
        background-size: cover;
        background-position: center;
        position: relative;
        overflow: hidden;
        transition: .4s;
        box-shadow: 0 15px 35px rgba(0,0,0,.15);
    }

        .feature-img::before {
            content: "";
            position: absolute;
            inset: 0;
            background: linear-gradient(to top, rgba(0,0,0,.65), transparent);
        }

    .feature-overlay {
        position: absolute;
        inset: 0;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        padding: 22px;
        color: #fff;
    }

    .feature-img:hover {
        transform: translateY(-10px);
        box-shadow: 0 25px 50px rgba(0,0,0,.35);
    }

    /* ================= CATEGORY ================= */
    .category {
        height: 260px;
        border-radius: 28px;
        background-size: cover;
        background-position: center;
        display: flex;
        align-items: flex-end;
        padding: 22px;
        font-weight: 600;
        color: #fff;
        position: relative;
        overflow: hidden;
        transition: .4s;
        box-shadow: 0 15px 35px rgba(0,0,0,.2);
    }

        .category::before {
            content: "";
            position: absolute;
            inset: 0;
            background: linear-gradient(to top, rgba(0,0,0,.6), transparent);
        }

        .category:hover {
            transform: translateY(-8px);
        }

    /* ================= BOOK SLIDER ================= */
    .book-section {
        background: #fff;
        padding: 70px 0;
    }

    .book-card {
        background: #fff;
        border-radius: 18px;
        padding: 16px;
        text-align: center;
        box-shadow: 0 15px 35px rgba(0,0,0,.12);
        transition: .35s;
        height: 100%;
        border: 1px solid #f0f0f0;
        /* Thêm mới để thẻ a hiển thị đúng */
        display: block;
        text-decoration: none; /* Bỏ gạch chân */
        color: inherit; /* Giữ màu chữ gốc */
    }

        .book-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 30px 60px rgba(0,0,0,.2);
            border-color: var(--accent);
            color: inherit; /* Không bị đổi màu xanh của link */
        }

        .book-card img {
            height: 230px;
            object-fit: cover;
            border-radius: 14px;
            margin-bottom: 14px;
        }

        .book-card h6 {
            font-weight: 600;
            font-size: 15px;
        }

        .book-card span {
            font-size: 13px;
            color: var(--text-gray);
        }


    .badge-premium {
        margin-top: 8px;
        font-size: 12px;
        background: #e0f2fe;
        color: #0284c7;
        padding: 4px 10px;
        border-radius: 999px;
        display: inline-block;
    }

    .carousel-control-prev,
    .carousel-control-next {
        width: 48px;
        height: 48px;
        background: #fff;
        border-radius: 50%;
        top: 45%;
        box-shadow: 0 10px 25px rgba(0,0,0,.25);
    }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        filter: invert(1);
    }

    /* ================= PARTNER ================= */
    .partner-box {
        height: 100px;
        border-radius: 20px;
        background-size: cover;
        background-position: center;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        font-weight: 600;
        transition: .4s;
        box-shadow: 0 12px 30px rgba(0,0,0,.2);
    }

        .partner-box::before {
            content: "";
            position: absolute;
            inset: 0;
            background: rgba(11,29,54,.7);
        }

        .partner-box span {
            position: relative;
            z-index: 2;
        }

        .partner-box:hover {
            transform: translateY(-8px);
        }
</style>

