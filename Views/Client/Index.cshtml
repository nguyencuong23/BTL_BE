@{
    ViewData["Title"] = "Trang chủ";
}

<style>
    .hero {
        padding: 110px 0;
        background: linear-gradient(rgba(11,29,54,.75), rgba(11,29,54,.75)), url('https://images.unsplash.com/photo-1524995997946-a1c2e315a42f');
        background-size: cover;
        background-position: center;
        color: #fff;
    }

        .hero span {
            color: #f59e0b;
        }

    .search-box {
        background: #fff;
        padding: 14px;
        border-radius: 14px;
        display: flex;
        gap: 10px;
        max-width: 520px;
        box-shadow: 0 20px 40px rgba(0,0,0,.25);
    }

    .feature {
        background: #fff;
        border-radius: 22px;
        padding: 30px;
        text-align: center;
        transition: .4s;
        box-shadow: 0 12px 30px rgba(0,0,0,.08);
    }

        .feature:hover {
            transform: translateY(-10px);
        }

    .feature-img {
        height: 220px;
        background-size: cover;
        background-position: center;
        position: relative;
        overflow: hidden;
        border-radius: 22px;
        color: #fff;
        cursor: pointer;
        transition: .3s;
    }

    .feature-overlay {
        position: absolute;
        inset: 0;
        background: transparent;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        padding: 20px;
    }

    .feature-img:hover {
        transform: translateY(-8px);
        box-shadow: 0 16px 35px rgba(0,0,0,.25);
    }

    .category {
        height: 240px;
        border-radius: 24px;
        background-size: cover;
        background-position: center;
        display: flex;
        align-items: end;
        padding: 20px;
        font-weight: 600;
        color: #fff;
        transition: .3s;
    }

    .client-box {
        height: 90px;
        border-radius: 18px;
        background-size: cover;
        background-position: center;
    }

    .partner-box {
        height: 90px;
        border-radius: 16px;
        background-size: cover;
        background-position: center;
        position: relative;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        font-weight: 600;
        font-size: 14px;
        text-align: center;
        transition: .3s ease;
        cursor: pointer;
    }

        .partner-box::before {
            content: "";
            position: absolute;
            inset: 0;
            background: transparent;
        }

        .partner-box:hover {
            transform: translateY(-6px);
            box-shadow: 0 14px 30px rgba(0,0,0,.25);
        }
</style>


