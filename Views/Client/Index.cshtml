        margin-left: -50vw;
        margin-right: -50vw;
        border-bottom-left-radius: 50px;
        border-bottom-right-radius: 50px;
        margin-bottom: 0;
    }

        .hero-modern::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(10, 25, 63, 0.75);
            border-bottom-left-radius: 50px;
            border-bottom-right-radius: 50px;
            z-index: 1;
        }

        .hero-modern .container {
            position: relative;
            z-index: 2;
        }

    .hero-title {
        font-size: 3.8rem;
        color: #fff;
        line-height: 1.2;
        margin-bottom: 25px;
        font-weight: 800;
        text-shadow: 0 4px 15px rgba(0,0,0,0.4);
    }

        .hero-title span {
            color: var(--accent-color);
        }

    .hero-desc {
        color: rgba(255, 255, 255, 0.9);
        font-size: 1.3rem;
        margin-bottom: 45px;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
        font-weight: 300;
    }

    .search-modern {
        background: rgba(255, 255, 255, 0.95);
        padding: 10px;
        border-radius: 60px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.4);
        display: flex;
        max-width: 750px;
        margin: 0 auto;
        backdrop-filter: blur(10px);
    }

        .search-modern input {
            border: none;
            box-shadow: none;
            padding-left: 30px;
            font-size: 1.1rem;
            height: 55px;
            background: transparent;
            width: 100%;
        }

            .search-modern input:focus {
                outline: none;
            }

        .search-modern button {
            border-radius: 50px;
            padding: 0 45px;
            height: 55px;
            font-size: 1.1rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            box-shadow: 0 10px 20px rgba(255, 193, 7, 0.3);
            transition: transform 0.3s;
            white-space: nowrap;
        }

            .search-modern button:hover {
                transform: translateY(-3px);
            }

    .info-cards-section {
        margin-top: -100px;
        position: relative;
        z-index: 10;
        padding-bottom: 50px;
    }

    .about-card {
        background: white;
        border-radius: 20px;
        padding: 50px 25px;
        text-align: center;
        box-shadow: var(--card-shadow);
        transition: all 0.3s ease;
        border: 1px solid rgba(0,0,0,0.03);
        height: 100%;
    }

        .about-card:hover {
            box-shadow: 0 30px 60px rgba(0,0,0,0.15);
            border-color: var(--primary-color);
        }

    .about-icon {
        font-size: 3.5rem;
        color: white;
        margin-bottom: 25px;
        display: inline-block;
        padding: 20px;
        background: linear-gradient(135deg, var(--primary-color), #6610f2);
        border-radius: 50%;
        width: 100px;
        height: 100px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 25px auto;
        box-shadow: 0 10px 20px rgba(13, 110, 253, 0.3);
    }

    @@keyframes floating {
        0% {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-20px);
        }

        100% {
            transform: translateY(0px);
        }
    }

    .floating-card {
        animation: floating 3.5s ease-in-out infinite;
    }

    .delay-1 {
        animation-delay: 0s;
    }

    .delay-2 {
        animation-delay: 0.5s;
    }

    .delay-3 {
        animation-delay: 1s;
    }

    .floating-card:hover {
        animation-play-state: paused;
        transform: translateY(-20px);
    }

    .book-section {
        padding: 80px 0 100px 0;
        background: #fff;
    }

    .swiper {
        width: 100%;
        padding-top: 20px;
        padding-bottom: 50px;
    }

    .swiper-slide {
        background-position: center;
        background-size: cover;
        width: 280px;
        height: auto;
    }

    .book-card {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        transition: 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        border: none;
        display: block;
        height: 100%;
        text-decoration: none;
        color: inherit;
    }

