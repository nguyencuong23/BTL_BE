<style>
    :root {
        --primary-color: #0d6efd;
        --secondary-color: #6c757d;
        --accent-color: #ffc107;
        --bg-light: #f8f9fa;
        --card-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    }

    body {
        background-color: #fcfcfc;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        overflow-x: hidden;
    }

    .hero-modern {
        background: url('https://atm273446-s3user.vcos.cloudstorage.com.vn/dhdainam/asset/images/news/497529472_1116084437213279_3837768097926410454_n_1.jpg') center center/cover no-repeat;
