        <div id="bookCarousel" class="carousel slide">
            <div class="carousel-inner">

                <div class="carousel-item active">
                    <div class="row g-4 justify-content-center">
                        <div class="col-6 col-md-3">
                            <a href="/Book/Detail/1" class="book-card">
