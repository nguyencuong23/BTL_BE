    .svc-feature-box {
        background: #f0f7ff;
        padding: 25px;
        border-radius: 15px;
        margin-bottom: 25px;
        border-left: 5px solid var(--primary-color);
    }

    .svc-list li {
        margin-bottom: 12px;
        color: #555;
    }

    .svc-list i {
        color: #28a745;
        margin-right: 12px;
    }
</style>

