@model QuanLyThuVienTruongHoc.Models.Users.User

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Chi tiết sinh viên";
}

<div class="page-header">
    <h1><i class="fas fa-info-circle me-2"></i>Chi tiết sinh viên</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
    </a>
</div>

<div class="details-card">
    <div class="card-header">
        <h4><i class="fas fa-user-graduate me-2"></i>Thông tin sinh viên</h4>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">
            <strong><i class="fas fa-hashtag me-2 text-muted"></i>ID:</strong>
            <span class="badge bg-secondary fs-6">#@Model.Id</span>
        </li>
        <li class="list-group-item">
            <strong><i class="fas fa-id-card me-2 text-muted"></i>Mã sinh viên:</strong>
            <span>@Model.StudentCode</span>
        </li>
        <li class="list-group-item">
            <strong><i class="fas fa-user me-2 text-muted"></i>Tên đăng nhập:</strong>
            <span>@Model.Username</span>
        </li>
        <li class="list-group-item">
            <strong><i class="fas fa-signature me-2 text-muted"></i>Họ tên:</strong>
            <span>@Model.FullName</span>
        </li>
        <li class="list-group-item">
            <strong><i class="fas fa-envelope me-2 text-muted"></i>Email:</strong>
            <span>@Model.Email</span>
        </li>
        <li class="list-group-item">
            <strong><i class="fas fa-phone me-2 text-muted"></i>Số điện thoại:</strong>
            <span>@Model.PhoneNumber</span>
        </li>
        <li class="list-group-item">
            <strong><i class="fas fa-toggle-on me-2 text-muted"></i>Trạng thái:</strong>
            @if (Model.IsActive)
            {
                <span class="badge badge-active">Hoạt động</span>
            }
            else
            {
                <span class="badge badge-inactive">Khóa</span>
            }
        </li>
        <li class="list-group-item">
            <strong><i class="fas fa-money-bill me-2 text-muted"></i>Tổng tiền phạt:</strong>
            @if (Model.TotalFine > 0)
            {
                <span class="badge bg-warning text-dark fs-6">@Model.TotalFine.ToString("N0") đ</span>
            }
            else
            {
                <span class="text-success">Không có phạt</span>
            }
        </li>
        <li class="list-group-item">
            <strong><i class="fas fa-calendar me-2 text-muted"></i>Ngày tạo:</strong>
            <span>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
        </li>
    </ul>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
        <i class="fas fa-edit me-2"></i>Chỉnh sửa
    </a>
    <a asp-action="ChangePassword" asp-route-id="@Model.Id" class="btn btn-warning">
        <i class="fas fa-key me-2"></i>Đổi mật khẩu
    </a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
        <i class="fas fa-trash me-2"></i>Xóa
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-list me-2"></i>Danh sách
    </a>
</div>
