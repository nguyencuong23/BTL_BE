@model IEnumerable<QuanLyThuVienTruongHoc.Models.Users.User>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Quản lý sinh viên/độc giả";
}

<!-- Page Header -->
<div class="page-header">
    <h1><i class="fas fa-user-graduate me-2"></i>Quản lý sinh viên/độc giả</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Thêm sinh viên mới
    </a>
</div>

<!-- Search Bar -->
<div class="search-bar">
    <div class="row align-items-center">
        <div class="col-md-6">
            <div class="search-input-wrapper">
                <i class="fas fa-search"></i>
                <input type="text" id="searchInput" class="form-control search-input" 
                       placeholder="Tìm kiếm theo mã SV, tên đăng nhập, họ tên...">
            </div>
        </div>
        <div class="col-md-6 text-end">
            <span class="text-muted">Tổng số: <strong>@Model.Count()</strong> sinh viên</span>
        </div>
    </div>
</div>

<!-- Data Table -->
<div class="table-card">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead>
                <tr>
                    <th style="width: 80px;">ID</th>
                    <th>Mã SV</th>
                    <th>Tên đăng nhập</th>
                    <th>Họ tên</th>
                    <th>Email</th>
                    <th>SĐT</th>
                    <th class="text-center">Trạng thái</th>
                    <th class="text-center">Phạt</th>
                    <th style="width: 180px;" class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td><span class="text-muted">#@item.Id</span></td>
                            <td><strong>@item.StudentCode</strong></td>
                            <td>@item.Username</td>
                            <td>@item.FullName</td>
                            <td><small>@item.Email</small></td>
                            <td><small>@item.PhoneNumber</small></td>
                            <td class="text-center">
                                @if (item.IsActive)
                                {
                                    <span class="badge badge-active">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge badge-inactive">Khóa</span>
                                }
                            </td>
                            <td class="text-center">
                                @if (item.TotalFine > 0)
                                {
                                    <span class="badge bg-warning text-dark">@item.TotalFine.ToString("N0") đ</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group-actions justify-content-center">
                                    <a asp-action="Details" asp-route-id="@item.Id" 
                                       class="btn btn-sm btn-action-details" title="Xem chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" 
                                       class="btn btn-sm btn-action-edit" title="Chỉnh sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="ChangePassword" asp-route-id="@item.Id" 
                                       class="btn btn-sm btn-warning" title="Đổi mật khẩu">
                                        <i class="fas fa-key"></i>
                                    </a>
                                    @if (item.Username != User.Identity.Name)
                                    {
                                        <a asp-action="Delete" asp-route-id="@item.Id" 
                                           class="btn btn-sm btn-action-delete" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9">
                            <div class="empty-state">
                                <i class="fas fa-users"></i>
                                <p>Chưa có sinh viên nào</p>
                                <a asp-action="Create" class="btn btn-primary">
                                    <i class="fas fa-plus me-2"></i>Thêm sinh viên đầu tiên
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
