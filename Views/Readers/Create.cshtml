@model QuanLyThuVienTruongHoc.Models.Users.User

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Thêm sinh viên mới";
}

<div class="page-header">
    <h1><i class="fas fa-plus-circle me-2"></i>Thêm sinh viên mới</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
    </a>
</div>

<div class="form-card">
    <div class="card-header">
        <h4><i class="fas fa-user-graduate me-2"></i>Thông tin sinh viên</h4>
    </div>

    <form asp-action="Create" method="post">
        <div asp-validation-summary="All" class="alert alert-danger" role="alert" style="display:none;"></div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="StudentCode" class="form-label">
                        <i class="fas fa-id-card me-1"></i>Mã sinh viên <span class="text-danger">*</span>
                    </label>
                    <input asp-for="StudentCode" class="form-control" placeholder="VD: SV001" />
                    <span asp-validation-for="StudentCode" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Username" class="form-label">
                        <i class="fas fa-user me-1"></i>Tên đăng nhập <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="FullName" class="form-label">
                        <i class="fas fa-signature me-1"></i>Họ tên <span class="text-danger">*</span>
                    </label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="PasswordHash" class="form-label">
                        <i class="fas fa-lock me-1"></i>Mật khẩu <span class="text-danger">*</span>
                    </label>
                    <div class="input-group">
                        <input asp-for="PasswordHash" class="form-control" type="password" id="passwordInput" placeholder="Nhập mật khẩu" />
                        <button class="btn btn-outline-secondary" type="button" onclick="togglePasswordVisibility('passwordInput', this)">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <small class="text-muted">Mật khẩu phải có ít nhất 6 ký tự, bao gồm chữ hoa, chữ thường và số</small>
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">
                        <i class="fas fa-envelope me-1"></i>Email
                    </label>
                    <input asp-for="Email" class="form-control" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label">
                        <i class="fas fa-phone me-1"></i>Số điện thoại
                    </label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="mb-3 form-check">
            <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
            <label asp-for="IsActive" class="form-check-label">Tài khoản hoạt động</label>
        </div>

        <hr />

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i>Lưu sinh viên
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times me-2"></i>Hủy bỏ
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Show validation summary only when has errors
        $(document).ready(function() {
            if ($('.validation-summary-errors').length > 0) {
                $('.alert-danger').show();
            }
        });

        function togglePasswordVisibility(inputId, button) {
            const input = document.getElementById(inputId);
            const icon = button.querySelector('i');
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }
    </script>
}
