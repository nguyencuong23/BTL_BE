@model QuanLyThuVienTruongHoc.Models.Library.Loan

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Xóa phiếu mượn";
}

<div class="page-header">
    <h1><i class="fas fa-exclamation-triangle me-2 text-danger"></i>Xác nhận xóa</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
    </a>
</div>

<div class="delete-warning-card">
    <div class="warning-icon">
        <i class="fas fa-exclamation-triangle"></i>
    </div>

    <h3>Cảnh báo: Xóa phiếu mượn</h3>
    <p class="lead">Bạn có chắc chắn muốn xóa phiếu mượn này không?<br />
    <strong>Hành động này không thể hoàn tác!</strong></p>

    <div class="delete-details-card mt-4">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <strong>Mã phiếu:</strong>
                <span class="badge bg-danger ms-2">@Model.LoanId</span>
            </li>
            <li class="list-group-item">
                <strong>Người mượn:</strong>
                @if (Model.User != null)
                {
                    <span>@Model.User.FullName</span>
                }
            </li>
            <li class="list-group-item">
                <strong>Sách:</strong>
                @if (Model.Book != null)
                {
                    <span>@Model.Book.Title</span>
                }
            </li>
            <li class="list-group-item">
                <strong>Ngày mượn:</strong>
                <span>@Model.BorrowDate.ToString("dd/MM/yyyy")</span>
            </li>
            <li class="list-group-item">
                <strong>Trạng thái:</strong>
                @if (Model.ReturnDate.HasValue)
                {
                    <span class="badge badge-returned">Đã trả</span>
                }
                else if (Model.DueDate < DateTime.Now)
                {
                    <span class="badge badge-overdue">Quá hạn</span>
                }
                else
                {
                    <span class="badge badge-borrowing">Đang mượn</span>
                }
            </li>
        </ul>
    </div>

    <form asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="LoanId" />
        <div class="d-flex gap-2 justify-content-center">
            <button type="submit" class="btn btn-danger btn-lg">
                <i class="fas fa-trash me-2"></i>Xác nhận xóa
            </button>
            <a asp-action="Index" class="btn btn-secondary btn-lg">
                <i class="fas fa-times me-2"></i>Hủy bỏ
            </a>
        </div>
    </form>
</div>
