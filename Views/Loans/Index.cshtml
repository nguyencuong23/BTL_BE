@model IEnumerable<QuanLyThuVienTruongHoc.Models.Library.Loan>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Quản lý mượn trả sách";
}

<!-- Page Header -->
<div class="page-header">
    <h1><i class="fas fa-exchange-alt me-2"></i>Quản lý mượn trả sách</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Tạo phiếu mượn mới
    </a>
</div>

<!-- Search and Filter Bar -->
<div class="search-bar">
    <div class="d-flex flex-wrap align-items-center gap-3">
        <!-- Search Input -->
        <div class="search-input-wrapper flex-grow-1">
            <i class="fas fa-search"></i>
            <input type="text" id="searchInput" class="form-control search-input" 
                   placeholder="Tìm kiếm theo mã phiếu, tên người mượn, tên sách...">
        </div>

        <!-- Right Side: Filters & Total -->
        <div class="d-flex align-items-center gap-3 ms-auto">
            <form id="filterForm" method="get" class="d-flex align-items-center gap-2">
                <select name="status" class="form-select filter-select" style="min-width: 250px;" 
                        onchange="document.getElementById('filterForm').submit();">
                    @{
                        var currentStatus = ViewData["CurrentStatus"] as int?;
                    }
                    <option value="" selected="@(!currentStatus.HasValue)">-- Tất cả trạng thái --</option>
                    <option value="1" selected="@(currentStatus == 1)">Đang mượn</option>
                    <option value="2" selected="@(currentStatus == 2)">Đã trả</option>
                    <option value="3" selected="@(currentStatus == 3)">Quá hạn</option>
                </select>
                
                <select name="sortOrder" class="form-select filter-select" style="min-width: 180px;" 
                        onchange="document.getElementById('filterForm').submit();">
                    @{
                        var sort = ViewData["CurrentSort"] as string;
                    }
                    <option value="" selected="@(string.IsNullOrEmpty(sort))">Tên sinh viên (A-Z)</option>
                    <option value="name_desc" selected="@(sort == "name_desc")">Tên sinh viên (Z-A)</option>
                    <option value="Book" selected="@(sort == "Book")">Tên sách (A-Z)</option>
                    <option value="book_desc" selected="@(sort == "book_desc")">Tên sách (Z-A)</option>
                    <option value="Date" selected="@(sort == "Date")">Ngày mượn (Cũ nhất)</option>
                    <option value="date_desc" selected="@(sort == "date_desc")">Ngày mượn (Mới nhất)</option>
                </select>
            </form>

             <div class="vr h-100 mx-1"></div>

             <span class="text-nowrap text-muted">Tổng: <strong>@Model.Count()</strong> phiếu</span>
        </div>
    </div>
</div>

<!-- Data Table -->
<div class="table-card" style="overflow: visible;">
    <div class="table-responsive" style="overflow: visible;">
        <table class="table table-hover align-middle mb-0">
            <thead>
                <tr>
                    <th style="width: 80px;">Mã phiếu</th>
                    <th>Người mượn</th>
                    <th>Sách</th>
                    <th>Ngày mượn</th>
                    <th>Hạn trả</th>
                    <th>Ngày trả</th>
                    <th class="text-center">Trạng thái</th>
                    <th class="text-end" style="min-width: 120px;">Tiền phạt</th>
                    <th style="width: 120px;" class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var item in Model)
                    {
                        var status = "dangmuon"; // default logic for display
                        int overdueDays = 0;

                        if (item.ReturnDate.HasValue)
                        {
                            status = "datra";
                        }
                        else if (item.DueDate < DateTime.Now)
                        {
                            status = "quahan";
                            overdueDays = (DateTime.Now.Date - item.DueDate.Date).Days;
                        }
                        
                        <tr>
                            <td><span class="badge bg-secondary">@item.LoanId</span></td>
                            <td>
                                @if (item.User != null)
                                {
                                    <strong>@item.User.FullName</strong><br />
                                    <small class="text-muted">@item.User.StudentCode</small>
                                }
                            </td>
                            <td>
                                @if (item.Book != null)
                                {
                                    <span>@item.Book.Title</span><br />
                                    <small class="text-muted">@item.Book.BookId</small>
                                }
                            </td>
                            <td><small>@item.BorrowDate.ToString("dd/MM/yyyy")</small></td>
                            <td><small>@item.DueDate.ToString("dd/MM/yyyy")</small></td>
                            <td>
                                @if (item.ReturnDate.HasValue)
                                {
                                    <small>@item.ReturnDate.Value.ToString("dd/MM/yyyy")</small>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td class="text-center">
                                @if (status == "datra")
                                {
                                    <span class="badge badge-returned">Đã trả</span>
                                    @* Removed date here as requested to move column back *@
                                }
                                else if (status == "quahan")
                                {
                                    <span class="badge badge-overdue">Quá hạn</span>
                                    @if (overdueDays > 0)
                                    {
                                        <div class="text-danger fw-bold small mt-1">@overdueDays ngày</div>
                                    }
                                }
                                else
                                {
                                    <span class="badge badge-borrowing">Đang mượn</span>
                                }
                            </td>
                            <td class="text-end">
                                @if (item.Fine > 0)
                                {
                                    <span class="text-danger fw-bold text-nowrap">@item.Fine.ToString("N0") đ</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="dropdown d-inline-block">
                                    <button class="btn btn-light btn-sm" type="button" data-bs-toggle="dropdown" aria-expanded="false" data-bs-boundary="viewport">
                                        <i class="fas fa-ellipsis-v text-muted"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                        <li>
                                            <a asp-action="Details" asp-route-id="@item.LoanId" class="dropdown-item">
                                                <i class="fas fa-eye me-2 text-info" style="width: 20px;"></i>Xem chi tiết
                                            </a>
                                        </li>
                                        @if (item.Status == QuanLyThuVienTruongHoc.Models.Library.LoanStatus.DangMuon || item.Status == QuanLyThuVienTruongHoc.Models.Library.LoanStatus.QuaHan)
                                        {
                                            <li>
                                                <a asp-action="Edit" asp-route-id="@item.LoanId" class="dropdown-item">
                                                    <i class="fas fa-edit me-2 text-primary" style="width: 20px;"></i>Cập nhật / Trả sách
                                                </a>
                                            </li>
                                        }
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a asp-action="Delete" asp-route-id="@item.LoanId" class="dropdown-item text-danger">
                                                <i class="fas fa-trash me-2" style="width: 20px;"></i>Xóa phiếu
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9">
                            <div class="empty-state">
                                <i class="fas fa-book-reader"></i>
                                <p>Chưa có phiếu mượn nào</p>
                                <a asp-action="Create" class="btn btn-primary">
                                    <i class="fas fa-plus me-2"></i>Tạo phiếu mượn đầu tiên
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
