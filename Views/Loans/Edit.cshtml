@model QuanLyThuVienTruongHoc.Models.Library.Loan

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Chỉnh sửa phiếu mượn";
}

<div class="page-header">
    <h1><i class="fas fa-edit me-2"></i>Chỉnh sửa phiếu mượn</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
    </a>
</div>

<div class="form-card">
    <div class="card-header">
        <h4><i class="fas fa-exchange-alt me-2"></i>Thông tin phiếu mượn</h4>
    </div>

    <form asp-action="Edit" method="post">
        <div asp-validation-summary="All" class="alert alert-danger" role="alert" style="display:none;"></div>

        <div class="mb-3">
            <label asp-for="LoanId" class="form-label"><i class="fas fa-hashtag me-1"></i>Mã phiếu</label>
            <input asp-for="LoanId" class="form-control" readonly />
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="UserId" class="form-label"><i class="fas fa-user me-1"></i>Người mượn <span class="text-danger">*</span></label>
                    <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId"></select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="BookId" class="form-label"><i class="fas fa-book me-1"></i>Sách <span class="text-danger">*</span></label>
                    <select asp-for="BookId" class="form-select" asp-items="ViewBag.BookId"></select>
                    <span asp-validation-for="BookId" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="BorrowDate" class="form-label"><i class="fas fa-calendar me-1"></i>Ngày mượn</label>
                    <input asp-for="BorrowDate" class="form-control" type="date" />
                    <span asp-validation-for="BorrowDate" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="DueDate" class="form-label"><i class="fas fa-calendar-check me-1"></i>Hạn trả</label>
                    <label asp-for="DueDate" class="form-label"><i class="fas fa-calendar-check me-1"></i>Hạn trả <span class="text-danger">*</span></label>
                    <input asp-for="DueDate" class="form-control" type="date" />
                    <span asp-validation-for="DueDate" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="ReturnDate" class="form-label"><i class="fas fa-calendar-times me-1"></i>Ngày trả thực tế</label>
                    <input asp-for="ReturnDate" class="form-control" type="date" />
                    <span asp-validation-for="ReturnDate" class="text-danger"></span>
                    <small class="text-muted">Để trống nếu chưa trả</small>
                </div>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Fine" class="form-label"><i class="fas fa-money-bill me-1"></i>Tiền phạt (VNĐ)</label>
            <input asp-for="Fine" class="form-control" type="number" min="0" />
            <span asp-validation-for="Fine" class="text-danger"></span>
        </div>

        <hr />

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i>Cập nhật
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times me-2"></i>Hủy bỏ
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/form-utils.js"></script>
}
