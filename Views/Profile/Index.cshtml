@model QuanLyThuVienTruongHoc.Models.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Thông tin cá nhân";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

<div class="container py-5">
    <div class="row">
        <!-- Tiêu đề trang -->
        <div class="col-12 mb-4">
            <h2 class="fw-bold text-dark">
                <i class="fa fa-user-circle me-2"></i>Thông tin cá nhân
            </h2>
            <p class="text-muted">Quản lý thông tin tài khoản của bạn</p>
        </div>
    </div>

    <!-- Hiển thị thông báo -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fa fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fa fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form asp-action="Update" asp-controller="Profile" method="post">
        @Html.AntiForgeryToken()

        <div class="row">
            <!-- Cột trái: Avatar + Thông tin cơ bản -->
            <div class="col-lg-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center p-4">
                        <!-- Avatar -->
                        <div class="mb-4 text-center">
                            <div class="avatar-container d-flex align-items-center justify-content-center mx-auto">
                                <i class="fa fa-user-circle text-primary" style="font-size: 100px;"></i>
                            </div>
                        </div>

                        <!-- Username -->
                        <h4 class="fw-bold text-dark mb-2">@Model.Username</h4>

                        <!-- Role Badge -->
                        <span class="badge @(Model.Role == "Admin" ? "bg-danger" : "bg-primary") mb-3 px-3 py-2">
                            <i class="fa fa-shield-alt me-1"></i>@Model.Role
                        </span>

                        <!-- Thông tin chỉ đọc -->
                        <div class="mt-4 text-start">
                            <div class="mb-3">
                                <small class="text-muted d-block mb-1">
                                    <i class="fa fa-calendar-alt me-1"></i>Ngày tạo tài khoản
                                </small>
                                <strong>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</strong>
                            </div>

                            <div>
                                <small class="text-muted d-block mb-1">
                                    <i class="fa fa-info-circle me-1"></i>Trạng thái
                                </small>
                                <span class="badge @(Model.Status == "Hoạt động" ? "bg-success" : "bg-secondary")">
                                    @Model.Status
                                </span>
                            </div>

                            <div class="mt-3 pt-3 border-top">
                                <div class="mb-3">
                                    <small class="text-muted d-block mb-1">
                                        <i class="fa fa-book-reader me-1"></i>Sách đang mượn
                                    </small>
                                    <strong class="fs-5 text-primary">@Model.LoanCount</strong> <span class="text-muted">cuốn</span>
                                </div>

                                <div>
                                    <small class="text-muted d-block mb-1">
                                        <i class="fa fa-coins me-1"></i>Tổng nợ hiện tại
                                    </small>
                                    <div class="d-flex align-items-center justify-content-between">
                                        <strong class="fs-5 text-danger">@Model.Debt.ToString("N0") VNĐ</strong>
                                        <button type="button" class="btn btn-sm btn-outline-danger" onclick="openPaymentModal()">
                                            <i class="fa fa-qrcode me-1"></i>Thanh toán
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Cột phải: Form thông tin cá nhân -->
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0 fw-bold">
                            <i class="fa fa-edit me-2"></i>Chỉnh sửa thông tin
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <!-- Validation Summary -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Username (chỉ đọc) -->
                        <div class="mb-4">
                            <label asp-for="Username" class="form-label fw-semibold">
                                <i class="fa fa-user me-1"></i>@Html.DisplayNameFor(m => m.Username)
                            </label>
                            <input asp-for="Username" class="form-control" readonly />
                            <small class="text-muted">Tên đăng nhập không thể thay đổi</small>
                        </div>

                        <!-- Student Code (chỉ hiện với User/Student) -->
                        @if (Model.Role != "Admin")
                        {
                            <div class="mb-4">
                                <label asp-for="StudentCode" class="form-label fw-semibold">
                                    <i class="fa fa-id-badge me-1"></i>@Html.DisplayNameFor(m => m.StudentCode)
                                </label>
                                <input asp-for="StudentCode" class="form-control" readonly />
                                <small class="text-muted">Mã sinh viên không thể thay đổi</small>
                            </div>
                        }

                        <!-- FullName -->
                        <div class="mb-4">
                            <label asp-for="FullName" class="form-label fw-semibold">
                                <i class="fa fa-id-card me-1"></i>@Html.DisplayNameFor(m => m.FullName)
                            </label>
                            <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <!-- Email -->
                        <div class="mb-4">
                            <label asp-for="Email" class="form-label fw-semibold">
                                <i class="fa fa-envelope me-1"></i>@Html.DisplayNameFor(m => m.Email)
                            </label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="example@email.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- PhoneNumber -->
                        <div class="mb-4">
                            <label asp-for="PhoneNumber" class="form-label fw-semibold">
                                <i class="fa fa-phone me-1"></i>@Html.DisplayNameFor(m => m.PhoneNumber)
                            </label>
                            <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="0123456789" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <!-- Role (chỉ đọc) -->
                        <div class="mb-4">
                            <label asp-for="Role" class="form-label fw-semibold">
                                <i class="fa fa-shield-alt me-1"></i>@Html.DisplayNameFor(m => m.Role)
                            </label>
                            <input asp-for="Role" class="form-control" readonly />
                            <small class="text-muted">Vai trò không thể thay đổi</small>
                        </div>

                        <!-- Nút hành động -->
                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fa fa-save me-2"></i>Cập nhật thông tin
                            </button>
                            <a asp-controller="Client" asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="fa fa-times me-2"></i>Hủy
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<!-- Payment Modal -->
<div id="paymentModal" class="modal-overlay" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.8); z-index:9999; align-items:center; justify-content:center;">
    <div class="bg-white rounded-4 p-4 text-center shadow-lg position-relative" style="max-width:400px; width:90%; animation: zoomIn 0.3s ease;">
        <button type="button" class="btn-close position-absolute top-0 end-0 m-3" onclick="closePaymentModal()"></button>
        
        <h4 class="fw-bold text-primary mb-3">Quét mã thanh toán</h4>
        <div class="p-3 border rounded-3 bg-light mb-3">
            <img src="~/images/qr-pay/qr-pay.jpg" alt="QR Payment" class="img-fluid rounded" style="max-height: 300px; object-fit: contain;">
        </div>
        
        <p class="text-muted small mb-3">
            Vui lòng quét mã QR trên ứng dụng ngân hàng để thanh toán dư nợ. Nội dung chuyển khoản: <br>
            <strong>TV [Mã SV] [Họ Tên]</strong>
        </p>
        
        <div class="alert alert-info py-2 small">
            <i class="fa fa-info-circle me-1"></i>Hệ thống sẽ cập nhật trạng thái sau ít phút.
        </div>
    </div>
</div>

<style>
    @@keyframes zoomIn {
        from { transform: scale(0.8); opacity: 0; }
        to { transform: scale(1); opacity: 1; }
    }
</style>

<!-- Script validation -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
    <script>
        function openPaymentModal() {
            const modal = document.getElementById('paymentModal');
            modal.style.display = 'flex';
            document.body.style.overflow = 'hidden';
        }

        function closePaymentModal() {
            const modal = document.getElementById('paymentModal');
            modal.style.display = 'none';
            document.body.style.overflow = 'auto';
        }

        // Close on click outside
        document.getElementById('paymentModal')?.addEventListener('click', function(e) {
            if (e.target === this) {
                closePaymentModal();
            }
        });
    </script>
}
